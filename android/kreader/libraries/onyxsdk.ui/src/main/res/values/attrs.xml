<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OnyxTableView">
        <attr name="numRows" format="integer" />
        <attr name="numColumns" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="MyTextView">
        <attr name="textSize" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="AlignTextView">
        <attr name="leading" format="dimension" />
        <attr name="firstLineLeading" format="dimension" />
        <attr name="lastLineDescent" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
    
</resources>