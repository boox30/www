<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tagview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/dialog_tittleBar"
        style="@style/global_dialog_tittle_bar">

        <TextView
            android:id="@+id/textView_title"
            style="@style/global_dialog_tittle_bar_textView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/hint" 
            android:textSize="@dimen/dialog_category_title_text_size"/>
           
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        />
    
	<com.onyx.android.sdk.ui.view.tagview.TagFlowLayout
	    android:id="@+id/id_flowlayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    tagview:max_select="1"/>
       
</LinearLayout>
