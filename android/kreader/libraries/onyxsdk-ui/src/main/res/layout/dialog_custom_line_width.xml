<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/square_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dialog_custom_line_width_tittle_margin"
        android:text="@string/custom_line_width"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_title_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dialog_main_view_padding"
        android:paddingRight="@dimen/dialog_main_view_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/current_value_tittle_margin"
                android:text="@string/current_value"
                android:textSize="@dimen/current_value_tittle_text_size" />

            <EditText
                android:id="@+id/current_value_indicator"
                android:inputType="none"
                android:focusable="false"
                android:clickable="false"
                android:ems="2"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/common_dialog_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_MinusButton"
                android:layout_width="@dimen/button_minHeight"
                android:layout_height="@dimen/button_minHeight"
                android:background="@drawable/imagebtn_bg"
                android:focusable="true"
                android:src="@drawable/ic_dialog_set_value_decrease" />

            <SeekBar
                android:id="@+id/seekBar_valueControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:max="20"
                android:progressDrawable="@drawable/seekbar_progress" />

            <ImageView
                android:id="@+id/imageView_AddButton"
                android:layout_width="@dimen/button_minHeight"
                android:layout_height="@dimen/button_minHeight"
                android:background="@drawable/imagebtn_bg"
                android:focusable="true"
                android:src="@drawable/ic_dialog_set_value_increase" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/end_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="20"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/preview_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_custom_width_preview_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/line_width_preview" />

            <com.onyx.android.sdk.ui.view.BesselCurveView
                android:id="@+id/bessel_view"
                android:layout_width="@dimen/bessel_curve_view_width"
                android:layout_height="@dimen/bessel_curve_view_height"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_minHeight"
            android:layout_weight="1"
            android:background="@drawable/no_top_line_press_bg"
            android:text="@string/cancel"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_minHeight"
            android:layout_weight="1"
            android:background="@drawable/no_left_top_line_press_bg"
            android:text="@string/ok"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
