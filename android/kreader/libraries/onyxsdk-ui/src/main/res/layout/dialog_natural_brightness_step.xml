<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_border"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dialog_brightness_ratingbar_margin_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imagebutton_light_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_focus_background"
            android:contentDescription="@drawable/ic_light"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imagebutton_mixing_light_down"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dialog_brightness_button_width"
                    android:layout_weight="1"
                    android:background="@drawable/button_focus_background"
                    android:contentDescription="@drawable/ic_light_down"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_light_moon" />

                <ImageButton
                    android:id="@+id/imagebutton_mixing_light_add"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dialog_brightness_button_width"
                    android:layout_weight="1"
                    android:background="@drawable/button_focus_background"
                    android:contentDescription="@drawable/ic_light_add"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_light_sun" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingbar_cold_light_settings"
                    style="@style/LightSettingsRatingBarStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:numStars="@integer/start_amount"
                    android:progressDrawable="@drawable/light_bar_big_step"
                    android:stepSize="1.0" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="66px"
                    android:background="@drawable/ic_light_bar_big_step_on" />

                <RatingBar
                    android:id="@+id/ratingbar_mixing_light_settings"
                    style="@style/LightSettingsRatingBarStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:numStars="@integer/start_amount"
                    android:progressDrawable="@drawable/light_bar_big_step"
                    android:stepSize="1.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="-16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="+16" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cold_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cold_light" />

        <Button
            android:id="@+id/btn_warm_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/warm_light" />
    </LinearLayout>

</LinearLayout>