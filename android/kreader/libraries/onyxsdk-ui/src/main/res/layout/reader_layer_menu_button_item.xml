<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/reader_layer_menu_item_button_height"
                android:orientation="vertical"
                android:paddingTop="@dimen/dialog_reader_menu_text_view_padding"
                android:paddingBottom="@dimen/dialog_reader_menu_text_view_padding"
                android:background="@drawable/imagebtn_bg"
>

    <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:contentDescription=""
            android:scaleType="fitCenter"/>

    <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="middle"
            android:text=""
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/reader_layer_menu_button_item_text_size"/>
</LinearLayout>