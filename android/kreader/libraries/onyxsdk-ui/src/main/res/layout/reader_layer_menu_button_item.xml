<?xml version="1.0" encoding="utf-8"?>

<com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                        xmlns:appCompat="http://schemas.android.com/tools"
                                                        android:id="@+id/layout_item"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:gravity="center"
                                                        android:paddingTop="@dimen/dialog_reader_menu_text_view_padding"
                                                        android:paddingBottom="@dimen/dialog_reader_menu_text_view_padding"
                                                        android:background="@drawable/imagebtn_bg"
>

    <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription=""
            android:scaleType="fitCenter"/>

    <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="middle"
            android:text=""
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/reader_layer_menu_button_item_text_size"/>
</com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>