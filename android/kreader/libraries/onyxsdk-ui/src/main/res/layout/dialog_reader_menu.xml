<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/reader_function_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/white">

        <RelativeLayout
                android:id="@+id/layout_back_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:background="@drawable/imagebtn_bg">

            <ImageView
                    android:id="@+id/imageView_back"
                    android:layout_width="24dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_dialog_reader_menu_arrow_black"/>

            <TextView
                    android:id="@+id/textView_main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:padding="4dp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView_back"
                    android:text="@string/dialog_reader_menu_back"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:visibility="visible">

            <ImageButton
                    android:id="@+id/button_front_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/imagebtn_bg"
                    android:nextFocusLeft="@id/layout_back_area"
                    android:padding="@dimen/dialog_reader_menu_top_bar_function_icon_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_reader_menu_frontlight_black"/>

            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_dialog_reader_menu_line_black"/>

            <ImageButton
                    android:id="@+id/button_screen_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/imagebtn_bg"
                    android:nextFocusLeft="@id/layout_back_area"
                    android:padding="@dimen/dialog_reader_menu_top_bar_function_icon_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_reader_menu_refresh_black"/>

            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_dialog_reader_menu_line_black"/>

            <ImageButton
                    android:id="@+id/button_dict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/imagebtn_bg"
                    android:nextFocusLeft="@id/layout_back_area"
                    android:padding="@dimen/dialog_reader_menu_top_bar_function_icon_padding"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_reader_menu_dictionary_black"/>

            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_dialog_reader_menu_line_black"/>

            <ImageButton
                    android:id="@+id/button_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="@dimen/dialog_reader_menu_top_bar_function_icon_padding"
                    android:background="@drawable/imagebtn_bg"
                    android:nextFocusLeft="@id/layout_back_area"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_reader_menu_search_black"/>

            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_dialog_reader_menu_line_black"/>

            <ImageButton
                    android:id="@+id/button_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/imagebtn_bg"
                    android:padding="@dimen/dialog_reader_menu_top_bar_function_icon_padding"
                    android:nextFocusLeft="@id/layout_back_area"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_reader_menu_setting_black"/>
        </LinearLayout>
    </RelativeLayout>

    <View
            android:id="@+id/reader_function_bar_divider"
            style="@style/single_line_X_axis_View"
            android:layout_height="2dp"
            android:layout_below="@id/reader_function_bar"/>

    <View
            android:id="@+id/dismiss_zone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/menu_layout"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@id/reader_function_bar_divider"
            android:background="@android:color/transparent"/>

    <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical">

        <View
                style="@style/single_line_X_axis_View"
                android:layout_height="@dimen/dialog_reader_menu_top_divider_height"/>

        <com.onyx.android.sdk.ui.view.ReaderLayerMenuLayout
                android:id="@+id/layout_reader_menu"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </com.onyx.android.sdk.ui.view.ReaderLayerMenuLayout>
    </LinearLayout>
</RelativeLayout>