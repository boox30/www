<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/radio_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider_line"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dialog_sort_by_item_radioButton_margin"
        android:gravity="center_vertical"
        android:button="@null"
        android:clickable="false"
        android:drawableRight="@android:drawable/btn_radio"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_sort_by_item_radioButton_text_size" />

    <View
        android:id="@+id/divider_line"
        style="@style/single_line_X_axis_View"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>