<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/common_dialog_width"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_border"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/font_face"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <com.onyx.android.sdk.ui.view.PageRecyclerView
        android:id="@+id/font_page_view"
        android:layout_width="wrap_content"
        android:layout_height="300dp">
    </com.onyx.android.sdk.ui.view.PageRecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_margin="10dp"
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="@string/ok"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/pre_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/imagebtn_bg"
            android:scaleType="fitXY"
            android:src="@drawable/ic_dialog_reader_arrow_left_black"/>

        <TextView
            android:id="@+id/page_size_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/7"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/next_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/imagebtn_bg"
            android:scaleType="fitXY"
            android:src="@drawable/ic_dialog_reader_arrow_right_black"/>
    </LinearLayout>
</LinearLayout>