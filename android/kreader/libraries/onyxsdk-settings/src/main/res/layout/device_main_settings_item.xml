<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="item"
            type="con.onyx.android.libsetting.model.SettingItem" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/imagebtn_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/setting_item_icon_size"
                android:layout_height="@dimen/setting_item_icon_size"
                android:src="@{item.iconRes}" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light.Medium"
                android:maxLines="2"
                android:text="@{item.tittle}" />

            <TextView
                android:id="@+id/item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.subTittle}"
                android:visibility="@{TextUtils.isEmpty(item.subTittle)?View.GONE:View.VISIBLE}" />

        </LinearLayout>
    </RelativeLayout>

</layout>