<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_dialog_wifi_connected"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_connection_status_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/wifi_status"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:id="@+id/text_view_connection_status"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="@string/wifi_connected"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_signal_level_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/wifi_signal"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:id="@+id/text_view_signal_level"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="@string/wifi_connected"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_link_speed_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/wifi_speed"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:id="@+id/text_view_link_speed"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/band_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_band_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/wifi_band"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:id="@+id/text_view_band"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_security_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/wifi_security"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:id="@+id/text_view_security"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_ip_address_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/wifi_ip_address"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:id="@+id/text_view_ip_address"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
