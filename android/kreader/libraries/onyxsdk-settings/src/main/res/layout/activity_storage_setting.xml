<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="storageInfo"
            type="com.onyx.android.libsetting.model.StorageInfo" />
    </data>

    <RelativeLayout
        android:id="@+id/activity_storage_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.onyx.android.libsetting.view.activity.StorageSettingActivity">

        <android.support.v7.widget.Toolbar
            style="@style/OnyxToolBarStyle"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <RelativeLayout
                    android:id="@id/back_function_layout"
                    style="@style/global_activities_back_function_layout">

                    <ImageView
                        android:id="@+id/back_icon"
                        style="@style/global_activities_back_btn_image"
                        android:contentDescription="" />

                    <ImageView
                        android:id="@+id/imageView_main_title"
                        style="@style/global_activities_back_btn_category_image"
                        android:layout_toRightOf="@+id/back_icon"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        android:id="@+id/textView_main_title"
                        style="@style/global_activities_back_btn_category_tittle"
                        android:layout_toRightOf="@+id/imageView_main_title"
                        android:ellipsize="middle"
                        android:gravity="left|center_vertical"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/setting_storage" />
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.onyx.android.sdk.ui.view.PieChartView
                android:id="@+id/storage_usage_view"
                pieChartMax="@{storageInfo.totalSpace}"
                pieChartProgress="@{storageInfo.spaceInUse}"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                app:progressTextSize="@dimen/storage_usage_percentage_text_size"
                app:roundColor="@android:color/darker_gray"
                app:progressTextColor="@android:color/black"
                app:roundProgressColor="@android:color/black"
                app:roundWidth="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_in_use"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light"
                    android:gravity="center"
                    android:text="@{@string/space_in_use(storageInfo.spaceInUse)}" />

                <View
                    style="@style/single_line_Y_axis_View"
                    android:layout_width="1dp" />

                <TextView
                    android:id="@+id/text_view_free_space"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light"
                    android:gravity="center"
                    android:text="@{@string/free_space(storageInfo.freeSpace)}" />

                <View
                    style="@style/single_line_Y_axis_View"
                    android:layout_width="1dp" />

                <TextView
                    android:id="@+id/text_view_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light"
                    android:gravity="center"
                    android:text="@{@string/total_space(storageInfo.totalSpace)}" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>
