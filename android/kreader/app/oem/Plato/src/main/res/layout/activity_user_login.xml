<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

        <variable
            name="haveNew"
            type="boolean" />

        <variable
            name="requestInfo"
            type="com.onyx.android.plato.cloud.bean.UserLoginRequestBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/login_activity_padding">

        <ImageView
            android:id="@+id/iv_main_activity_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{listener::onClick}"
            android:src="@drawable/settings" />

        <ImageView
            android:layout_width="@dimen/login_activity_logo_width"
            android:layout_height="@dimen/login_activity_logo_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_activity_logo_margin_top"
            android:src="@drawable/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_activity_name_margin_top"
            android:text="@string/app_name"
            android:textSize="@dimen/level_one_heading_font" />

        <EditText
            android:id="@+id/login_act_et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_activity_account_margin_top"
            android:hint="@string/login_activity_account_hint"
            android:text="@={requestInfo.account}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_activity_password_margin_top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_act_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_activity_password_hint"
                android:inputType="textPassword"
                android:text="@={requestInfo.password}" />

            <ImageView
                android:id="@+id/user_login_show_password"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="@{listener::onClick}"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:src="@{requestInfo.isShowPassword?@drawable/eye_open:@drawable/eye_close}"/>

        </RelativeLayout>

        <CheckBox
            android:id="@+id/login_act_cb_keep_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_activity_keep_password_margin_top"
            android:checked="@={requestInfo.isKeepPassword}"
            android:text="@string/login_activity_keep_password"
            android:textSize="@dimen/level_three_heading_font" />

        <TextView
            android:id="@+id/login_act_tv_startlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_activity_login_button_margin_top"
            android:background="@drawable/selector_login_button_background"
            android:gravity="center"
            android:onClick="@{listener::onClick}"
            android:padding="@dimen/login_activity_login_button_pddding"
            android:text="@string/login_activity_login"
            android:textSize="@dimen/level_three_heading_font" />
    </LinearLayout>
</layout>
