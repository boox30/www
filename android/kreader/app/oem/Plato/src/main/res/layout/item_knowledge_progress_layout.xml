<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="KnowledgeProgressBinding">

        <variable
            name="knowledgePointName"
            type="String"/>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.onyx.android.sdk.ui.view.PieChartView
            android:id="@+id/item_knowledge_progress"
            app:roundColor="@color/chart_gray"
            app:roundProgressColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/item_knowledge_progress_chart_width_and_height"
            android:layout_height="@dimen/item_knowledge_progress_chart_width_and_height"/>

        <TextView
            android:text="@{knowledgePointName}"
            android:textSize="@dimen/level_three_heading_font"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>