<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ItemContentBinding">

        <import type="com.onyx.android.plato.utils.StringUtil" />

        <variable
            name="content"
            type="com.onyx.android.plato.cloud.bean.HandlerFinishContent" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/homework_finished_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/homework_finished_item_margin_left"
            android:text="@{content.content.num}"
            android:textSize="@dimen/level_three_heading_font" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/homework_finished_unit"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/homework_item_chapter_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/homework_unfinished_title_format(StringUtil.transitionHomeworkType(content.content.type), content.content.title)}"
                android:textSize="@dimen/level_three_heading_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{StringUtil.isNullOrEmpty(content.content.correctTime) ? @string/homework_item_submit_format(content.content.submitTime) : @string/homework_item_correct_format(content.content.correctTime)}"
                android:textSize="@dimen/level_three_heading_font" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/homework_item_icon_go_padding"
            android:drawableRight="@drawable/icon_go"
            android:text="@{StringUtil.isNullOrEmpty(content.content.correctTime) ? @string/homework_item_submit_already : @string/homework_item_correct_already}"
            android:textSize="@dimen/level_three_heading_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/homework_finished_item_margin_left"
            android:background="@android:color/black" />
    </RelativeLayout>
</layout>
