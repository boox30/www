<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/cover_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_selector_bg"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="232dp"
            android:layout_height="320dp"
            android:scaleType="fitXY"
            android:src="@drawable/book_cover" />

        <ImageView
            android:id="@+id/image_get_widget"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/book_item_get_widget"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cover_panel"
        android:layout_alignRight="@+id/cover_panel"
        android:layout_below="@+id/cover_panel"
        android:layout_marginRight="19dp"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="2"
        android:maxLines="2"
        android:textSize="24sp" />
</RelativeLayout>