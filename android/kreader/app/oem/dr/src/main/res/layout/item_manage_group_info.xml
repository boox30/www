<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/manage_group_info_item_serial_number_margin_left"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manage_group_info_item_serial_number"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/order_number" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manage_group_info_item_group_name"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/group_manager_group_name" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manage_group_info_item_identity"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/group_manager_identity" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manage_group_info_item_people_number"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/number_of_people" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manage_group_info_item_news"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/news" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/group_manager_activity_manager_container_width"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/manage_group_info_item_serial_number_margin_right">

        <TextView
            android:id="@+id/manage_group_info_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/info_item_group_join_margin_left"
            android:background="@drawable/rectangle_stroke_focused"
            android:padding="@dimen/info_item_group_join_padding"
            android:text="@string/examine"
            android:textColor="@color/white"
            android:textSize="@dimen/level_two_heading_font" />

    </LinearLayout>
</LinearLayout>