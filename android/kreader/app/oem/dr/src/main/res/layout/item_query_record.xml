<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_infromal_essay_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/query_record_item_keyword"
            style="@style/good_sentence_item_textview"
            android:layout_marginLeft="@dimen/new_word_item_order_number_margin_left"
            android:layout_weight="1"
            android:text="@string/memorandum_activity_time" />

        <View style="@style/good_sentence_item_view" />

        <TextView
            android:id="@+id/query_record_item_source_dictionary"
            style="@style/good_sentence_item_textview"
            android:layout_marginLeft="@dimen/title_interval_margin_left"
            android:layout_weight="2"
            android:text="@string/memorandum_activity_time_quantum" />

        <View style="@style/good_sentence_item_view" />

        <TextView
            android:id="@+id/query_record_item_paraphrase"
            style="@style/good_sentence_item_textview"
            android:layout_marginLeft="@dimen/title_interval_margin_left"
            android:layout_marginRight="@dimen/title_interval_margin_left"
            android:layout_weight="4"
            android:ellipsize="end"
            android:text="@string/memorandum_activity_matter" />

    </LinearLayout>

    <View style="@style/Horizontal_view" />
</LinearLayout>