<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/sketch_activity_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/sketch_activity_share"
            style="@style/new_word_notebook_textview_style"
            android:layout_alignParentRight="true"
            android:text="@string/infromal_essay_activity_share" />

        <TextView
            android:id="@+id/sketch_activity_export"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/sketch_activity_share"
            android:text="@string/export" />

        <TextView
            android:id="@+id/sketch_activity_delete"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/sketch_activity_export"
            android:text="@string/new_word_delete" />

        <TextView
            android:id="@+id/sketch_activity_new"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/sketch_activity_delete"
            android:text="@string/infromal_essay_activity_new" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sketch_activity_buttom"
        android:layout_below="@id/title_bar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sketch_activity_check_all"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/sketch_activity_export"
            android:text="@string/sketch_activity_check_all" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/sketch_activity_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
