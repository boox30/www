<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/device_information_view_padding_bottom">

    <LinearLayout
        android:id="@+id/page_refresh_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/device_setting_page_margin_left"
        android:layout_marginRight="@dimen/device_setting_page_margin_left"
        android:orientation="vertical"
        android:paddingBottom="@dimen/device_setting_padding_top"
        android:paddingTop="@dimen/device_setting_padding_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:text="@string/device_setting_page_refreshes"
            android:textSize="@dimen/level_one_heading_font"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/page_refreshes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/page_refreshes_switch"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/device_setting_padding_top"
                    android:paddingTop="@dimen/device_setting_padding_top"
                    android:text="A2刷新"
                    android:textSize="@dimen/level_three_heading_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_setting_page_refresh_explain"
                    android:textSize="@dimen/level_three_heading_font" />
            </LinearLayout>

            <Switch
                android:id="@+id/page_refreshes_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/level_one_heading_font" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/page_refresh_tab_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/page_refresh_tab"
        android:layout_marginLeft="@dimen/device_setting_page_margin_left"
        android:layout_marginRight="@dimen/device_setting_page_margin_left"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/page_refresh_refresh_rate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_refresh_tab_bottom"
        android:layout_marginLeft="@dimen/device_setting_page_margin_left"
        android:layout_marginRight="@dimen/device_setting_page_margin_left"
        android:paddingBottom="@dimen/page_refresh_item_padding_top"
        android:paddingTop="@dimen/page_refresh_item_padding_top"
        android:text="@string/device_setting_page_refresh_rate"
        android:textSize="@dimen/level_one_heading_font"
        android:textStyle="bold" />

    <View
        android:id="@+id/page_refresh_refresh_rate_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/page_refresh_refresh_rate_title"
        android:layout_marginLeft="@dimen/device_setting_page_margin_left"
        android:layout_marginRight="@dimen/device_setting_page_margin_left"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/page_refresh_refresh_rate_bottom"
        android:orientation="vertical">

        <com.onyx.android.dr.view.PageRecyclerView
            android:id="@+id/page_refresh_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/device_setting_page_margin_left"
            android:layout_marginRight="@dimen/device_setting_page_margin_left"
            android:layout_weight="1"
            android:background="@drawable/page_refresh_recycler_selector" />

        <View
            android:id="@+id/page_refresh_save_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/device_setting_page_margin_left"
            android:layout_marginRight="@dimen/device_setting_page_margin_left"
            android:background="@android:color/black" />
    </LinearLayout>
</RelativeLayout>