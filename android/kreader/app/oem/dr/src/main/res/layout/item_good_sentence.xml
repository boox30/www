<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/good_sentence_item_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/good_sentence_item_month"
        style="@style/good_sentence_item_textview"
        android:layout_weight="1"
        android:text="@string/good_sentence_activity_month" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/good_sentence_item_week"
        style="@style/good_sentence_item_textview"
        android:layout_weight="1"
        android:text="@string/good_sentence_activity_week" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/good_sentence_item_day"
        style="@style/good_sentence_item_textview"
        android:layout_weight="1"
        android:text="@string/good_sentence_activity_day" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/good_sentence_item_content"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="1dp"
        android:layout_weight="4"
        android:text="@string/good_sentence_activity_good_sentence" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/good_sentence_item_reading_matter"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="1dp"
        android:layout_weight="2"
        android:text="@string/good_sentence_activity_involved_reading_matter" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/good_sentence_item_page_number"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:text="@string/good_sentence_activity_page_number" />

    <TextView
        android:id="@+id/good_sentence_item_recitation"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="1dp"
        android:layout_weight="2"
        android:text="@string/good_sentence_activity_recitation" />
</LinearLayout>