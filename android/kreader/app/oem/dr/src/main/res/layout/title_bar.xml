<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/title_bar_margin">

        <LinearLayout
            android:id="@+id/menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:background="@drawable/rectangle_stroke_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dialog_prev" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/title_bar_image_width"
                android:layout_height="@dimen/title_bar_image_width" />

            <TextView
                android:id="@+id/title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/menu_back"
                android:background="@android:color/white"
                android:padding="@dimen/title_bar_title_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/level_one_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_bar_right_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/title_bar_right_checkbox_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_stroke"
                android:visibility="gone"
                android:layout_marginRight="@dimen/title_bar_right_container_margin_right"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/new_word_activity_all_check_width"
                    android:layout_height="@dimen/item_summary_list_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/title_bar_right_checkbox_margin_right"
                    android:layout_marginLeft="@dimen/title_bar_right_checkbox_margin_top"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/title_bar_right_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:scaleX="1.4"
                        android:scaleY="1.4" />
                </RelativeLayout>

                <TextView
                    style="@style/reading_rate_item_text_view_style"
                    android:text="@string/good_sentence_activity_check_all"
                    android:layout_marginRight="@dimen/title_bar_right_checkbox_textview_margin_right"
                    android:textSize="@dimen/level_one_font_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/title_bar_right_select_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_bar_right_container_margin_right"
                android:background="@drawable/rectangle_stroke"
                android:padding="@dimen/title_bar_right_menu_padding"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_bar_right_icon_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_bar_right_container_margin_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_bar_right_icon_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_bar_right_container_margin_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_bar_right_icon_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_bar_right_container_margin_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_bar_right_icon_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_bar_right_container_margin_right"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_bar_right_shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_bar_right_container_margin_right"
                android:drawableLeft="@drawable/ic_reader_cart"
                android:textSize="@dimen/level_two_font_size"
                android:textColor="@color/black"
                android:text="(0)"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/title_bar_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/title_bar_right_image_margin_right"
            android:background="@drawable/ic_search"
            android:visibility="gone" />

        <EditText
            android:id="@+id/title_bar_right_edit_text"
            android:layout_width="@dimen/title_bar_right_edit_text_width"
            android:layout_height="@dimen/title_bar_right_edit_text_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/title_bar_right_image_margin_right"
            android:layout_toLeftOf="@id/title_bar_right_image"
            android:background="@drawable/rectangle_stroke"
            android:hint="@string/input_keyword"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_bar_right_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/text_view_bg"
            android:padding="@dimen/title_bar_right_menu_padding"
            android:textColor="@color/black"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/HorizontalLineStyle" />
</LinearLayout>