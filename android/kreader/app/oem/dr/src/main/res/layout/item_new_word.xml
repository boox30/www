<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_new_word_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/new_word_item_check"
        style="@style/checkbox_style"/>

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/new_word_item_time"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_weight="2"
        android:text="@string/memorandum_activity_time" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/new_word_item_content"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_weight="2"
        android:text="@string/new_word_activity_new_word" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/new_word_item_dictionaryLookup"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_weight="3"
        android:text="@string/new_word_activity_dictionaryLookup" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/new_word_item_reading_matter"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_weight="3"
        android:text="@string/good_sentence_activity_involved_reading_matter" />

</LinearLayout>