<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/reader_page_info_menu_back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reader_page_info_menu_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/reader_page_info_menu_book_name_padding"
                android:text="xxx"
                android:textSize="@dimen/level_two_font_size"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/reader_page_info_menu_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="1/1"
                android:textSize="@dimen/level_three_font_size"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/reader_page_info_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/reader_page_info_menu_back_margin_right"
            android:background="@drawable/image_btn_bg"
            android:src="@drawable/ic_reader_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/reader_page_info_menu_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reader_page_info_menu_prev_chapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/image_btn_bg"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/prev_chapter"
            android:layout_marginLeft="@dimen/reader_page_info_menu_prev_chapter_padding_left"
            android:layout_marginRight="@dimen/reader_page_info_menu_prev_chapter_padding_right"
            android:textSize="@dimen/level_two_font_size"
            android:textColor="@android:color/black"/>

        <SeekBar
            android:id="@+id/reader_page_info_menu_read_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/focused_bg"
            android:max="20"
            android:maxHeight="@dimen/menu_seek_bar_height"
            android:minHeight="@dimen/menu_seek_bar_height"
            android:padding="@dimen/reader_page_info_menu_reading_process_padding"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/seek_bar_thumb" />

        <TextView
            android:id="@+id/reader_page_info_menu_next_chapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/image_btn_bg"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/next_chapter"
            android:layout_marginLeft="@dimen/reader_page_info_menu_next_chapter_padding_left"
            android:layout_marginRight="@dimen/reader_page_info_menu_next_chapter_padding_right"
            android:textSize="@dimen/level_two_font_size"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>