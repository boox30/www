<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_infromal_essay_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_speech_recording_time"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_weight="2"
        android:text="@string/infromal_essay_activity_time" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/item_speech_recording_title"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_weight="2"
        android:text="@string/infromal_essay_activity_title" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/item_speech_recording_number"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="1dp"
        android:layout_weight="2"
        android:text="@string/infromal_essay_activity_word_number" />

    <View style="@style/good_sentence_item_view" />

    <TextView
        android:id="@+id/item_speech_recording_content"
        style="@style/good_sentence_item_textview"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_weight="4"
        android:text="@string/infromal_essay_activity_content" />

    <View style="@style/good_sentence_item_view" />

    <LinearLayout
        android:layout_width="@dimen/item_speech_recording_start_speech_width"
        android:layout_height="@dimen/item_speech_recording_start_speech_height"
        android:layout_marginLeft="@dimen/title_interval_margin_left"
        android:layout_margin="@dimen/item_speech_recording_start_speech_margin">

        <ImageView
            android:id="@+id/item_speech_recording_start_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/item_speech_recording_start_speech_margin_left"
            android:background="@drawable/ic_play" />
    </LinearLayout>

</LinearLayout>