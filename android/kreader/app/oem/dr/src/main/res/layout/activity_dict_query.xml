<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            layout="@layout/activity_common_tital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_query_lang_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/query_lang_show_margin"
            android:text="@string/dict_query_language"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_one_heading_font" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/dict_query_type"
                android:text="@string/word_query" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dict_query_bracket_margin_left"
                android:text="@string/dict_query_bracket_left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <EditText
                android:id="@+id/activity_query_word"
                android:layout_width="@dimen/dict_query_edittext_width"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:maxLines="@integer/dict_query_edittext_lines"
                android:singleLine="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dict_query_bracket_right"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <Button
                android:id="@+id/activity_word_query_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_query_search_margin_left"
                android:text="@string/activity_query_search"
                android:textSize="@dimen/level_two_heading_font"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/dict_query_type"
                android:text="@string/dim_query" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dict_query_bracket_margin_left"
                android:text="@string/dict_query_bracket_left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <EditText
                android:id="@+id/activity_query_fuzzy"
                android:layout_width="@dimen/dict_query_edittext_width"
                android:imeOptions="actionSearch"
                android:maxLines="@integer/dict_query_edittext_lines"
                android:singleLine="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dict_query_bracket_right"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <Button
                android:id="@+id/activity_fuzzy_query_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_query_search_margin_left"
                android:text="@string/activity_query_search"
                android:textSize="@dimen/level_two_heading_font"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/dict_query_type"
                android:text="@string/phrase_query" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dict_query_bracket_margin_left"
                android:text="@string/dict_query_bracket_left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <EditText
                android:id="@+id/activity_query_phrase"
                android:layout_width="@dimen/dict_query_edittext_width"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:maxLines="@integer/dict_query_edittext_lines" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dict_query_bracket_right"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <Button
                android:id="@+id/activity_phrase_query_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_query_search_margin_left"
                android:text="@string/activity_query_search"
                android:textSize="@dimen/level_two_heading_font"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/dict_query_type"
                android:text="@string/example_query" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dict_query_bracket_margin_left"
                android:text="@string/dict_query_bracket_left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <EditText
                android:id="@+id/activity_query_example"
                android:layout_width="@dimen/dict_query_edittext_width"
                android:imeOptions="actionSearch"
                android:maxLines="@integer/dict_query_edittext_lines"
                android:singleLine="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dict_query_bracket_right"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <Button
                android:id="@+id/activity_example_query_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_query_search_margin_left"
                android:text="@string/activity_query_search"
                android:textSize="@dimen/level_two_heading_font"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dict_query_function_margin">

        <include
            android:id="@+id/main_tab_menu"
            layout="@layout/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dict_query_function_height" />
    </LinearLayout>

</LinearLayout>
