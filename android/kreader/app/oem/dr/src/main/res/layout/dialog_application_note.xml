<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_stroke"
    android:fillViewport="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/application_note_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/dialog_title_padding"
        android:text="@string/dialog_title"
        android:textColor="@color/black"
        android:textSize="@dimen/level_one_font_size" />

    <View style="@style/Horizontal_view" />

    <LinearLayout
        android:id="@+id/dialog_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_seek_bar_container_margin"
        android:orientation="vertical">

        <com.onyx.android.dr.view.DefaultEditText
            android:id="@+id/application_note_dialog_content"
            style="@style/defaultEditText"
            android:layout_height="@dimen/application_note_dialog_content_height"
            android:hint="@string/input_application_note" />

    </LinearLayout>

    <View style="@style/Horizontal_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dialog_title_padding">

        <Button
            android:id="@+id/application_note_dialog_cancel"
            style="@style/dialog_button_style"
            android:text="@string/dialog_button_cancel"
            android:textSize="@dimen/level_one_font_size" />

        <Button
            android:id="@+id/application_note_dialog_confirm"
            style="@style/dialog_button_style"
            android:text="@string/send"
            android:textSize="@dimen/level_one_font_size" />
    </LinearLayout>

</LinearLayout>