<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ebook_list_item_buy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ebook_library_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/level_two_font_size" />

        <LinearLayout
            android:id="@+id/ebook_library_item_buy_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ebook_library_add_to_shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ebook_library_add_to_shopping_cart_margin_right"
                android:background="@drawable/rounded_rectangle_stroke"
                android:padding="@dimen/edit_text_padding"
                android:text="@string/add_to_shopping_cart"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ebook_library_item_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle_stroke"
                android:padding="@dimen/edit_text_padding"
                android:textColor="@color/black"
                android:text="@string/buy" />
        </LinearLayout>

        <TextView
            android:id="@+id/ebook_library_item_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_stroke"
            android:padding="@dimen/edit_text_padding"
            android:textColor="@color/black"
            android:text="@string/paid"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/library_item_cover_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ebook_list_item_buy_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image_selector_bg">

        <ImageView
            android:id="@+id/ebook_library_image_cover"
            android:layout_width="@dimen/library_item_cover_width"
            android:layout_height="@dimen/library_item_cover_height"
            android:scaleType="fitXY"
            android:src="@drawable/book_cover" />
    </RelativeLayout>
</RelativeLayout>