<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/UserInfoTextViewStyle"
            android:text="@string/teach_subject" />

        <EditText
            android:id="@+id/teach_subject"
            style="@style/UserInfoEditTextStyle" />
    </LinearLayout>

    <TextView
        style="@style/UserInfoTextViewStyle"
        android:layout_marginTop="@dimen/edit_text_margin_top"
        android:text="@string/interested_direction" />

    <com.onyx.android.sdk.ui.view.PageRecyclerView
        android:id="@+id/teacher_interested_subject"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/interest_recycler_margin_left"
        android:layout_height="@dimen/interest_recycler_height"
        android:layout_marginTop="@dimen/edit_text_margin_top" />
</LinearLayout>
