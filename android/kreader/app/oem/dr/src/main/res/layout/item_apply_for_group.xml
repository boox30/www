<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/manage_group_info_item_serial_number_margin_left"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/apply_for_group_item_time"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/memorandum_activity_time" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/apply_for_group_item_proposer"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/proposer" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/apply_for_group_item_application_note"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/application_note" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/apply_for_group_container_width"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/apply_for_group_container_width_margin">

        <LinearLayout
            android:id="@+id/apply_for_group_item_operate_container"
            android:layout_width="@dimen/apply_for_group_container_width"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/apply_for_group_item_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/rectangle_stroke_focused"
                android:gravity="center"
                android:padding="@dimen/info_item_group_join_padding"
                android:text="@string/apply_for_group_item_pass"
                android:textColor="@android:color/white"
                android:textSize="@dimen/level_two_heading_font" />

            <TextView
                android:id="@+id/apply_for_group_item_refuse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/apply_for_group_item_refuse_margin_left"
                android:layout_weight="1"
                android:background="@drawable/rectangle_stroke_focused"
                android:gravity="center"
                android:padding="@dimen/info_item_group_join_padding"
                android:text="@string/apply_for_group_item_refuse"
                android:textColor="@android:color/white"
                android:textSize="@dimen/level_two_heading_font" />

        </LinearLayout>

        <TextView
            android:id="@+id/apply_for_group_item_already_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/info_item_group_join_padding"
            android:text="@string/apply_for_group_item_already_pass"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_two_heading_font" />

    </RelativeLayout>
</LinearLayout>