<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_indicator_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="@dimen/page_indicator_padding"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/level_two_font_size" />

    <LinearLayout
        android:id="@+id/page_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_prev" />

        <TextView
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/page_indicator_margin"
            android:layout_marginRight="@dimen/page_indicator_margin"
            android:gravity="center_vertical"
            android:text="@string/page_indicator_initial_data"
            android:textColor="@color/black"
            android:textSize="@dimen/level_two_font_size" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next" />

    </LinearLayout>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/page_indicator_refresh_margin"
        android:layout_toLeftOf="@+id/page_panel"
        android:src="@drawable/ic_refresh" />

</RelativeLayout>