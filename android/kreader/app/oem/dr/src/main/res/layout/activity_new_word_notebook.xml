<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/new_word_activity_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:orientation="horizontal"
        android:paddingTop="@dimen/new_word_activity_radio_group_padding_top">

        <RadioButton
            android:id="@+id/new_word_activity_english"
            style="@style/TabSecondStyle"
            android:text="@string/english" />

        <RadioButton
            android:id="@+id/new_word_activity_chinese"
            style="@style/TabSecondStyle"
            android:text="@string/chinese" />

        <RadioButton
            android:id="@+id/new_word_activity_minority_language"
            style="@style/TabSecondStyle"
            android:text="@string/small_language" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="@string/new_word_activity_hint"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_one_heading_font" />

        <View style="@style/Horizontal_view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/new_word_activity_all_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/fragment_speech_recording_all_number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_one_heading_font" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/new_word_activity_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/new_word_activity_export"
            style="@style/new_word_notebook_textview_style"
            android:layout_alignParentRight="true"
            android:text="@string/export" />

        <TextView
            android:id="@+id/new_word_activity_delete"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/new_word_activity_export"
            android:text="@string/new_word_delete" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_word_activity_bottom"
        android:layout_below="@id/new_word_activity_radio_group"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_weight="1"
                android:text="@string/good_sentence_activity_check_all" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="@string/memorandum_activity_time" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="@string/new_word_activity_new_word" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:text="@string/new_word_activity_dictionaryLookup" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:text="@string/good_sentence_activity_involved_reading_matter" />
        </LinearLayout>

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/new_word_activity_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
