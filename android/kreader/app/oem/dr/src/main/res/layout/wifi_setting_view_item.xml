<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/wifi_view_item_padding_top"
    android:paddingTop="@dimen/wifi_view_item_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/wifi_view_item_margin_right"
        android:layout_toLeftOf="@+id/wifi_setting_details"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wifi_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/device_setting_page_refreshes"
            android:textSize="@dimen/device_setting_title_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wifi_setting_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wifi_view_item_margin_top"
            android:ellipsize="middle"
            android:maxLines="1"
            android:text="@string/device_setting_device_information"
            android:textSize="@dimen/device_setting_setting_font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wifi_setting_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wifi_setting_wifi_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/wifi_setting_wifi_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/wifi_view_item_margin_left"
            android:src="@drawable/ic_wifi_signal_4" />
    </LinearLayout>
</RelativeLayout>