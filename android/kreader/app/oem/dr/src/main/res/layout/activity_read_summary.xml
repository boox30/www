<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/read_summary_layout_margin"
        android:layout_weight="1"
        android:background="@drawable/rounded_rectangle_stroke"
        android:orientation="vertical">

        <TextView
            android:id="@+id/read_summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_article_or_an_overview_of_this_page"
            android:textColor="@color/black"
            android:textSize="@dimen/level_two_font_size" />

        <EditText
            android:id="@+id/edit_read_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/edit_after_reading_top"
            android:layout_weight="1"
            android:gravity="top"
            android:padding="@dimen/edit_after_reading_padding" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/read_summary_layout_margin"
        android:layout_weight="1"
        android:background="@drawable/rounded_rectangle_stroke"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_words_review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_words_review"
            android:textColor="@color/black"
            android:textSize="@dimen/level_two_font_size" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/new_words_review_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/read_summary_layout_margin"
        android:layout_weight="1"
        android:background="@drawable/rounded_rectangle_stroke"
        android:orientation="vertical">

        <TextView
            android:id="@+id/good_sentence_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perfect_this_article_or_this_page_good_sentence"
            android:textColor="@color/black"
            android:textSize="@dimen/level_two_font_size" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/good_sentence_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>