<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/informal_essay_activity_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/infromal_essay_activity_share"
            style="@style/new_word_notebook_textview_style"
            android:layout_alignParentRight="true"
            android:text="@string/infromal_essay_activity_share" />

        <TextView
            android:id="@+id/infromal_essay_activity_export"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/infromal_essay_activity_share"
            android:text="@string/export" />

        <TextView
            android:id="@+id/infromal_essay_activity_delete"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/infromal_essay_activity_export"
            android:text="@string/new_word_delete" />

        <TextView
            android:id="@+id/infromal_essay_activity_new"
            style="@style/new_word_notebook_textview_style"
            android:layout_toLeftOf="@+id/infromal_essay_activity_delete"
            android:text="@string/infromal_essay_activity_new" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/informal_essay_activity_bottom"
        android:layout_below="@id/title_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_weight="1"
                android:text="@string/good_sentence_activity_check_all" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="@string/infromal_essay_activity_time" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="@string/infromal_essay_activity_title" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="@string/infromal_essay_activity_word_number" />

            <TextView
                style="@style/good_sentence_activity_textview"
                android:layout_marginLeft="1dp"
                android:layout_weight="4"
                android:text="@string/infromal_essay_activity_content" />
        </LinearLayout>

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/infromal_essay_activity_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
