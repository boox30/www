<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/group_home_page_activity_create"
        style="@style/new_word_notebook_textview_style"
        android:text="@string/group_home_page_activity_create" />

    <TextView
        android:id="@+id/group_home_page_activity_join"
        style="@style/new_word_notebook_textview_style"
        android:text="@string/group_home_page_activity_join" />

    <TextView
        android:id="@+id/group_home_page_activity_exit"
        style="@style/new_word_notebook_textview_style"
        android:text="@string/group_home_page_activity_exit" />

    <TextView
        android:id="@+id/group_home_page_activity_manage"
        style="@style/new_word_notebook_textview_style"
        android:text="@string/group_home_page_activity_manage" />

</LinearLayout>
