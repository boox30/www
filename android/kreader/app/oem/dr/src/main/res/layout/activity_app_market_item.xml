<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_icon_label"
        android:layout_width="@dimen/activity_home_app_item_icon_size"
        android:layout_height="@dimen/activity_home_app_item_icon_size"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_home_app_item_text_layout_margin_left_right"
        android:layout_marginRight="@dimen/activity_home_app_item_text_layout_margin_left_right"
        android:layout_toLeftOf="@+id/app_start_download"
        android:layout_toRightOf="@+id/app_icon_label">

        <TextView
            android:id="@+id/app_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_home_app_item_text_layout_name_text_size" />

        <TextView
            android:id="@+id/app_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name_label"
            android:textSize="@dimen/activity_home_app_item_text_layout_type_text_size" />

        <TextView
            android:id="@+id/app_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/app_type_label"
            android:layout_alignTop="@+id/app_type_label"
            android:layout_toRightOf="@+id/app_type_label"
            android:textSize="@dimen/activity_home_app_item_text_layout_size_text_size" />

        <TextView
            android:id="@+id/app_desc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_type_label"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/activity_home_app_item_text_layout_summary_text_size" />

    </RelativeLayout>

    <Button
        android:id="@+id/app_start_download"
        android:layout_width="@dimen/activity_home_app_item_download_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_square_black_background"
        android:ellipsize="middle"
        android:focusable="false"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="@dimen/activity_home_app_item_download_button_min_height"
        android:padding="@dimen/activity_home_app_item_download_button_padding"
        android:text="@string/apk_download"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_home_app_item_download_button_text_size" />

</RelativeLayout>