<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@color/normal_black</item>
    </style>

    <style name="VerticalLineStyle">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/normal_black</item>
    </style>

    <style name="UserInfoEditTextStyle">
        <item name="android:layout_width">@dimen/user_info_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_stroke</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
    </style>

    <style name="UserInfoTextViewStyle">
        <item name="android:layout_width">@dimen/user_info_text_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/login_text_margin_right</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TabMenuItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MainMenuBottomButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_menu_bottom_imagebtn_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FontSizeMenuItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/font_size_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BookInfoTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_bg</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@drawable/alert_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_no_title" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/square_bg</item>
        <item name="colorAccent">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowElevation" tools:targetApi="M">0dp</item>
    </style>

    <style name="single_line_X_axis_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="popup_selection_menu_image_view">
        <item name="android:layout_marginTop">@dimen/popup_selection_menu_action_margin_top_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="popup_selection_menu_text_view">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/level_two_font_size</item>
        <item name="android:paddingTop">@dimen/popup_selection_menu_text_view_padding_top</item>
        <item name="android:paddingBottom">@dimen/popup_selection_menu_text_view_padding_bottom</item>
        <item name="android:layout_marginBottom">@dimen/popup_selection_menu_action_margin_top_bottom</item>
    </style>

    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="search_button">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
        <item name="android:layout_margin">@dimen/search_button_margin</item>
    </style>

    <style name="BookDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
