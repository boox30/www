<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@color/normal_black</item>
    </style>

    <style name="VerticalLineStyle">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/normal_black</item>
    </style>

    <style name="UserInfoEditTextStyle">
        <item name="android:layout_width">@dimen/user_info_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_stroke</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
    </style>

    <style name="UserInfoTextViewStyle">
        <item name="android:layout_width">@dimen/user_info_text_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/login_text_margin_right</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TabMenuItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/image_btn_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MainMenuBottomButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_menu_bottom_imagebtn_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FontSizeMenuItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/font_size_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BookInfoTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_bg</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@drawable/alert_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_no_title" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/square_bg</item>
        <item name="colorAccent">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowElevation" tools:targetApi="M">0dp</item>
    </style>

    <style name="single_line_X_axis_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="popup_selection_menu_image_view">
        <item name="android:layout_marginTop">@dimen/popup_selection_menu_action_margin_top_bottom
        </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="popup_selection_menu_text_view">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/level_two_font_size</item>
        <item name="android:paddingTop">@dimen/popup_selection_menu_text_view_padding_top</item>
        <item name="android:paddingBottom">@dimen/popup_selection_menu_text_view_padding_bottom
        </item>
        <item name="android:layout_marginBottom">
            @dimen/popup_selection_menu_action_margin_top_bottom
        </item>
    </style>

    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="search_button">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/image_btn_bg</item>
        <item name="android:layout_margin">@dimen/search_button_margin</item>
    </style>

    <style name="BookDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Horizontal_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="dict_query_type">
        <item name="android:layout_width">@dimen/dict_type_query_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/dict_type_query_margin_left</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
    </style>

    <style name="dict_query_bracket_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:text">@string/dict_query_bracket_left</item>
        <item name="android:layout_marginLeft">@dimen/dict_query_bracket_margin_left</item>
    </style>

    <style name="dict_query_bracket_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:text">@string/dict_query_bracket_right</item>
    </style>

    <style name="activity_query_search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:text">@string/activity_query_search</item>
        <item name="android:layout_marginLeft">@dimen/activity_query_search_margin_left</item>
    </style>

    <style name="dict_query_edittext">
        <item name="android:layout_width">@dimen/dict_query_edittext_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:maxLines">@integer/dict_query_edittext_lines</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dict_query_edittext_second">
        <item name="android:layout_width">@dimen/dict_query_edittext_width_second</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:maxLines">@integer/dict_query_edittext_lines</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="defaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/add_infromal_essay_activity_content_height</item>
        <item name="android:layout_margin">@dimen/add_infromal_essay_activity_content_margin</item>
        <item name="android:background">@drawable/weixuanzhong_btn</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">6</item>
        <item name="android:minLines">4</item>
        <item name="android:padding">@dimen/add_infromal_essay_activity_content_padding</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
    </style>

    <style name="good_sentence_activity_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
    </style>

    <style name="good_sentence_item_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="good_sentence_item_view">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="good_sentence_activity_spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:dropDownVerticalOffset">55dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:gravity">center</item>
        <item name="android:theme">@style/SpinnerStyle</item>
    </style>

    <style name="good_sentence_activity_spinner_second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dropDownVerticalOffset">55dp</item>
        <item name="android:layout_margin">@dimen/dialog_result_spinner_margin</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="new_word_notebook_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/select_dialog_close_cancel_margin</item>
        <item name="android:background">@drawable/rectangle_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/select_dialog_close_cancel_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
    </style>

    <style name="text_view_second_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/record_time_activity_text_view_margin_top</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/select_dialog_close_cancel_padding</item>
        <item name="android:background">@drawable/rectangle_stroke</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
    </style>

    <style name="dialog_time_selector_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dialog_time_selector_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_one_font_size</item>
    </style>

    <style name="good_sentence_activity_spinner_linearlayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="dialog_time_selector_linearlayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/rectangle_stroke</item>
    </style>

    <style name="dict_tab_voice">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="android_dialog_no_title" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/square_bg</item>
        <item name="android:textColor">@color/background_device_default_dark</item>
    </style>

    <style name="SpinnerStyle">
        <item name="colorAccent">#888888</item>
        <item name="colorControlNormal">#ddffffff</item>
    </style>

    <style name="firstViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="checkbox_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/check_box_style</item>
    </style>

    <style name="text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/level_three_font_size</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/level_three_font_size</item>
    </style>

    <style name="media_button" parent="@android:style/MediaButton">
        <item name="android:background">@android:drawable/btn_default</item>
    </style>

    <style name="DialogActivityTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.SoundRecorder" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="WifiDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <!--Disable OverFlown Button(3-dot button)-->
        <item name="actionOverflowButtonStyle">@null</item>
        <!--Remove 1px shadow between status bar and window content-->
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="popupMenuStyle">@style/OnyxAppCompat.ToolBar.Popup</item>
        <item name="android:dropDownListViewStyle">@style/OnyxAppCompat.PopupMenuListView</item>
        <item name="android:textColorPrimary">@color/primary_text_device_default_light</item>
        <item name="android:textAppearance">@style/OnyxAppCompat.TextAppearance.Light</item>
        <item name="android:textAppearanceLarge">@style/OnyxAppCompat.TextAppearance.Light.Large
        </item>
        <item name="android:textAppearanceMedium">@style/OnyxAppCompat.TextAppearance.Light.Medium
        </item>
        <item name="android:textAppearanceSmall">@style/OnyxAppCompat.TextAppearance.Light.Small
        </item>
        <item name="android:textAppearanceButton">@style/OnyxAppCompat.TextAppearance.Light.Button
        </item>
        <item name="textAppearanceLargePopupMenu">
            @style/OnyxAppCompat.TextAppearance.Light.PopupMenu.Large
        </item>
        <item name="textAppearanceSmallPopupMenu">
            @style/OnyxAppCompat.TextAppearance.Light.PopupMenu.Small
        </item>
        <item name="editTextStyle">@style/OnyxAppCompat.EditTextStyle</item>

        <item name="android:listDivider">@android:color/black</item>
        <item name="preferenceTheme">@style/OnyxAppCompat.PreferenceTheme</item>
        <item name="alertDialogTheme">@style/OnyxAppCompat.AlertDialog</item>
        <item name="buttonStyle">@style/OnyxAppCompat.ButtonStyle</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
