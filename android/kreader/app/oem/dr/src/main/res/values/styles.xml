<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@color/normal_black</item>
    </style>

    <style name="VerticalLineStyle">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/normal_black</item>
    </style>

    <style name="UserInfoEditTextStyle">
        <item name="android:layout_width">@dimen/user_info_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_stroke</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
    </style>

    <style name="UserInfoTextViewStyle">
        <item name="android:layout_width">@dimen/user_info_text_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/login_text_margin_right</item>
        <item name="android:gravity">right</item>
    </style>
</resources>
