<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fragment_content_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/level_one_heading_font"
        android:text="@string/now_reading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/now_reading_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/now_reading_book_cover"
                android:layout_width="@dimen/now_reading_book_cover_width"
                android:layout_height="@dimen/now_reading_book_cover_height"
                android:background="@drawable/image_selector_bg" />

            <TextView
                android:id="@+id/now_reading_text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/now_reading_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/fragment_main_view_bookName_width"
                android:layout_height="@dimen/now_reading_progress_bar_height" />

            <TextView
                android:id="@+id/now_reading_book_name"
                android:layout_width="@dimen/fragment_main_view_bookName_width"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/level_one_heading_font"
                android:text="@string/recent_add" />

            <ImageView
                android:id="@+id/image_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_next" />

            <TextView
                android:id="@+id/page_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/page_count_margin"
                android:text="@string/more_books"
                android:layout_centerVertical="true"
                android:textSize="@dimen/level_one_heading_font"
                android:layout_toLeftOf="@id/image_next" />
        </RelativeLayout>

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/recent_reading_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>