<?xml version="1.0" encoding="utf-8"?>
<com.onyx.android.dr.webview.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dragLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/startHandle"
        android:layout_width="@dimen/startHandle_width"
        android:layout_height="@dimen/startHandle_height"
        android:scaleType="center"
        android:src="@drawable/selection_handle" />

    <ImageView
        android:id="@+id/endHandle"
        android:layout_width="@dimen/endHandle_width"
        android:layout_height="@dimen/endHandle_height"
        android:scaleType="center"
        android:src="@drawable/selection_handle" />

</com.onyx.android.dr.webview.DragLayer>
