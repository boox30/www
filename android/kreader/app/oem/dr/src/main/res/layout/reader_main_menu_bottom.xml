<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/reader_main_menu_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/reader_main_menu_bottom_catalogue"
                style="@style/TabMenuItem"
                android:src="@drawable/ic_reader_menu_black" />

            <ImageView
                android:id="@+id/reader_main_menu_bottom_bookmark"
                style="@style/TabMenuItem"
                android:src="@drawable/ic_reader_bm" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <ImageView
                android:id="@+id/reader_main_menu_bottom_physical_key"
                style="@style/MainMenuBottomButtonStyle"
                android:src="@drawable/ic_reader_page_flip" />

            <ImageView
                android:id="@+id/reader_main_menu_bottom_voice"
                style="@style/MainMenuBottomButtonStyle"
                android:src="@drawable/ic_voice" />

            <ImageView
                android:id="@+id/reader_main_menu_bottom_progress"
                style="@style/MainMenuBottomButtonStyle"
                android:src="@drawable/ic_reader_progress_black" />

            <ImageView
                android:id="@+id/reader_main_menu_bottom_reading_setting"
                style="@style/MainMenuBottomButtonStyle"
                android:src="@drawable/ic_reader_typeface_black" />

            <ImageView
                android:id="@+id/reader_main_menu_bottom_pdf_setting"
                style="@style/TabMenuItem"
                android:src="@drawable/ic_reader_zoom"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
</LinearLayout>