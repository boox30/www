<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/bookshelf_title_bar"
        layout="@layout/title_bar"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bookshelf_tab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/bookshelf_tab"
            android:layout_width="0dp"
            android:layout_height="@dimen/bookshelf_tab_height"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:tabIndicatorHeight="@dimen/bookshelf_tab_indicator_height"
            app:tabTextAppearance="@android:style/TextAppearance.Holo.Large" />

        <ImageView
            android:id="@+id/bookshelf_book_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/bookshelf_button_padding"
            android:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/bookshelf_type_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/bookshelf_type_toggle_margin"
            android:background="@drawable/text_view_background"
            android:padding="@dimen/bookshelf_button_padding"
            android:text="@string/classification_bookshelf"
            android:textSize="@dimen/level_two_heading_font" />

    </LinearLayout>

    <View
        style="@style/HorizontalLineStyle"
        android:background="@android:color/darker_gray" />

    <com.onyx.android.sdk.ui.view.SinglePageRecyclerView
        android:id="@+id/bookshelf_groups_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/fragment_content_padding" />

    <include
        layout="@layout/page_indicator_layout"
        android:visibility="gone" />
</LinearLayout>