<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/forget_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_layout_title_margin_top"
        android:text="@string/change_password"
        android:textColor="@color/black"
        android:textSize="@dimen/level_one_heading_font" />

    <View
        android:id="@+id/login_title_line"
        android:layout_width="@dimen/login_title_line_width"
        android:layout_height="@dimen/thick_line_height"
        android:layout_below="@+id/forget_password_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/edit_text_margin_top"
        android:background="@color/black" />

    <TextView
        android:id="@+id/forget_password_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/forget_password_name_margin_top"
        android:text="@string/change_password"
        android:textColor="@color/black"
        android:textSize="@dimen/level_one_heading_font"
        android:visibility="gone" />

    <include
        android:id="@+id/get_verification_code_layout"
        layout="@layout/get_verification_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_layout_margin_top"
        android:orientation="vertical"
        android:visibility="visible" />

    <include
        android:id="@+id/set_password_layout"
        layout="@layout/set_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_layout_margin_top"
        android:orientation="vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/change_password_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_layout_margin_top"
        android:drawableLeft="@drawable/ic_login_right"
        android:drawablePadding="@dimen/change_password_result_drawable_padding"
        android:gravity="center_vertical"
        android:text="@string/change_password_succeed"
        android:textSize="@dimen/level_one_font_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/login_next_button_margin_bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forget_password_prev_button"
            android:layout_width="@dimen/interest_check_box_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/login_button_margin_left"
            android:background="@drawable/text_view_bg"
            android:gravity="center"
            android:padding="@dimen/edit_text_margin_top"
            android:text="@string/prev_step"
            android:textColor="@color/black"
            android:textSize="@dimen/level_one_heading_font"
            android:visibility="visible" />

        <TextView
            android:id="@+id/forget_password_next_button"
            android:layout_width="@dimen/interest_check_box_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/login_button_margin_left"
            android:background="@drawable/text_view_bg"
            android:gravity="center"
            android:padding="@dimen/edit_text_margin_top"
            android:text="@string/next_step"
            android:textColor="@color/black"
            android:textSize="@dimen/level_one_heading_font"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>