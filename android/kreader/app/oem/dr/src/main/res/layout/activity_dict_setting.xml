<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dict_setting_activity_hint_margin"
        android:text="@string/lexical_language_sort"
        android:textColor="@android:color/black"
        android:textSize="@dimen/level_one_heading_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/dict_setting_activity_text_second_style"
            android:text="@string/first_sequence" />

        <RelativeLayout
            android:layout_width="@dimen/dict_setting_activity_spinner_container_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dict_setting_activity_spinner"
            android:background="@drawable/rectangle_stroke">

            <Spinner
                android:id="@+id/dict_setting_activity_first_spinner"
                style="@style/dict_setting_activity_spinner_style" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dict_setting_activity_first_select_dict"
            style="@style/dict_setting_activity_text_style"
            android:text="@string/select_dict" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dict_setting_activity_margin_top"
        android:orientation="horizontal">

        <TextView
            style="@style/dict_setting_activity_text_second_style"
            android:text="@string/second_sequence" />

        <RelativeLayout
            android:layout_width="@dimen/dict_setting_activity_spinner_container_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dict_setting_activity_spinner"
            android:background="@drawable/rectangle_stroke">

            <Spinner
                android:id="@+id/dict_setting_activity_second_spinner"
                style="@style/dict_setting_activity_spinner_style" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dict_setting_activity_second_select_dict"
            style="@style/dict_setting_activity_text_style"
            android:text="@string/select_dict" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dict_setting_activity_margin_top"
        android:orientation="horizontal">

        <TextView
            style="@style/dict_setting_activity_text_second_style"
            android:text="@string/third_sequence" />

        <RelativeLayout
            android:layout_width="@dimen/dict_setting_activity_spinner_container_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dict_setting_activity_spinner"
            android:background="@drawable/rectangle_stroke">

            <Spinner
                android:id="@+id/dict_setting_activity_third_spinner"
                style="@style/dict_setting_activity_spinner_style" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dict_setting_activity_third_select_dict"
            style="@style/dict_setting_activity_text_style"
            android:text="@string/select_dict" />

    </LinearLayout>
</LinearLayout>
