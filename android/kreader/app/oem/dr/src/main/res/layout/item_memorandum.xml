<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_infromal_essay_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/memorandum_item_day_of_week_margin_left"
        android:visibility="visible">

        <TextView
            android:id="@+id/memorandum_item_day_of_week"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/book_report_list_time" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/new_word_item_order_number_margin_left"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memorandum_item_time_time"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/book_report_list_time" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memorandum_item_matter"
            style="@style/reading_rate_item_text_view_style"
            android:text="@string/book_report_list_time" />

        <View style="@style/view_vertical_direction" />
    </LinearLayout>

</LinearLayout>