<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/dict_result_activity_function_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dict_result_sound_height"
        android:layout_marginTop="@dimen/button_function_panel_margin_top"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/activity_dict_iv_voice_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dict_result_america_sound_margin_left"
            android:background="@drawable/image_btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/dict_pronounce_one_gray" />

        <ImageView
            android:id="@+id/activity_dict_iv_voice_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dict_result_english_sound_margin_left"
            android:background="@drawable/image_btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/dict_pronounce_two_gray" />

        <ImageView
            android:id="@+id/activity_dict_button_previous"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dict_result_previous_margin_left"
            android:background="@drawable/image_btn_bg"
            android:clickable="true"
            android:contentDescription="@string/hint"
            android:focusable="true"
            android:src="@drawable/dict_page_left"
            android:visibility="visible" />

        <TextView
            android:id="@+id/activity_dict_page_size_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="1/1"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/level_two_heading_font" />

        <ImageView
            android:id="@+id/activity_dict_button_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/image_btn_bg"
            android:clickable="true"
            android:contentDescription="@string/hint"
            android:focusable="true"
            android:src="@drawable/dict_page_right"
            android:visibility="visible" />
    </LinearLayout>


    <com.onyx.android.dr.view.AutoPagedWebView
        android:id="@+id/activity_dict_result_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_dict_result_view_margin_bottom"
        android:layout_marginTop="@dimen/activity_dict_result_view_margin_top"
        android:layout_weight="1"
        android:focusable="true"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/activity_dict_result_no_data_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1">

        <TextView
            android:id="@+id/activity_dict_result_no_data_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/join_group_activity_all_number_padding"
            android:text="@string/headword_search_empty"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_one_heading_font"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dict_result_activity_function_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/Horizontal_view"
            android:layout_height="@dimen/dict_query_activity_view_height" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/activity_dict_result_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
