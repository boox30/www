<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/activity_common_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.onyx.android.sdk.ui.view.PageRecyclerView
        android:id="@+id/activity_dict_result_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dict_result_dict_type_height"
        android:layout_margin="@dimen/dict_result_dict_type_margin"
        android:background="@drawable/rectangle_stroke" />

    <LinearLayout
        android:id="@+id/button_function_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dict_result_sound_height"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/activity_dict_iv_voice_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dict_result_america_sound_margin_left"
            android:background="@drawable/imagebtn_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/dict_pronounce_one_gray" />

        <ImageView
            android:id="@+id/activity_dict_iv_voice_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dict_result_english_sound_margin_left"
            android:background="@drawable/imagebtn_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/dict_pronounce_two_gray" />

        <ImageView
            android:id="@+id/activity_dict_button_previous"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dict_result_previous_margin_left"
            android:background="@drawable/imagebtn_bg"
            android:clickable="true"
            android:contentDescription="@string/hint"
            android:focusable="true"
            android:src="@drawable/dict_page_left"
            android:visibility="visible" />

        <TextView
            android:id="@+id/activity_dict_page_size_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="1/1"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/level_two_heading_font" />

        <ImageView
            android:id="@+id/activity_dict_button_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/imagebtn_bg"
            android:clickable="true"
            android:contentDescription="@string/hint"
            android:focusable="true"
            android:src="@drawable/dict_page_right"
            android:visibility="visible" />
    </LinearLayout>

    <com.onyx.android.dr.view.AutoPagedWebView
        android:id="@+id/activity_dict_result_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/main_tab_menu"
            layout="@layout/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dict_result_function_height" />
    </LinearLayout>

</LinearLayout>
