<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.onyx.jdread.shop.model.BookStoreViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/book_store_padding_left_right"
        android:paddingTop="@dimen/book_store_padding_top"
        android:paddingRight="@dimen/book_store_padding_left_right"
        tools:context="com.onyx.jdread.shop.ui.StoreFragment">

        <include
            android:id="@+id/store_top_function"
            layout="@layout/layout_book_store_top_function"/>

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            subjectItems="@{viewModel.bannerSubjectIems.modelBean.resultList}"
            android:id="@+id/recycler_view_banner"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/book_store_banner_recycler_margin_top_and_bottom"
            android:layout_marginBottom="@dimen/book_store_banner_recycler_margin_top_and_bottom"
            android:layout_height="@dimen/book_store_banner_recycler_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_no_stoke_background"
                    android:text="@{viewModel.coverSubjectIems.modelBean.moduleBookChild.showName}"
                    android:textSize="@dimen/level_two_heading_font"/>

                <TextView
                    android:onClick="@{()->viewModel.coverSubjectIems.onViewAllClick()}"
                    android:id="@+id/view_all_one"
                    android:drawableRight="@mipmap/ic_go_view_all"
                    android:drawablePadding="@dimen/view_all_drawable_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_no_stoke_background"
                    android:text="@string/view_all"
                    android:textSize="@dimen/level_three_heading_font"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <com.onyx.android.sdk.ui.view.PageRecyclerView
                subjectItems="@{viewModel.coverSubjectIems.modelBean.resultList}"
                android:id="@+id/recycler_view_one"
                android:layout_marginTop="@dimen/bookstore_recycler_view_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/book_store_recycler_height"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/book_store_contain_recycler_margin_top"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_no_stoke_background"
                    android:text="@{viewModel.titleSubjectIems.modelBean.moduleBookChild.showName}"
                    android:textSize="@dimen/level_two_heading_font"/>

                <TextView
                    android:onClick="@{()->viewModel.titleSubjectIems.onViewAllClick()}"
                    android:id="@+id/view_all_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/text_no_stoke_background"
                    android:drawableRight="@mipmap/ic_go_view_all"
                    android:drawablePadding="@dimen/view_all_drawable_padding"
                    android:text="@string/view_all"
                    android:textSize="@dimen/level_three_heading_font"/>

            </RelativeLayout>

            <com.onyx.android.sdk.ui.view.PageRecyclerView
                subjectItems="@{viewModel.titleSubjectIems.modelBean.resultList}"
                android:id="@+id/recycler_view_two"
                android:layout_marginTop="@dimen/bookstore_recycler_view_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/book_store_recycler_height"/>

        </LinearLayout>

    </LinearLayout>

</layout>