<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loadingModel"
            type="com.onyx.jdread.main.common.LoadingDialog.DialogModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/loading_dialog_padding">

        <ImageView
            android:id="@+id/image_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/loading_dialog_text_margin_left"
            android:text="@{loadingModel.loadingText}"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/level_one_heading_font" />
    </LinearLayout>
</layout>