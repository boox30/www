<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.onyx.jdread.shop.model.BookShopViewModel"/>

    </data>

    <RelativeLayout
        android:paddingLeft="@dimen/book_shop_padding_left"
        android:paddingRight="@dimen/book_shop_padding_right"
        android:layout_marginTop="@dimen/book_shop_search_view_padding_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/fragment_book_shop_one">

        <ImageView
            android:padding="@dimen/search_view_button_background_padding"
            android:onClick="@{()->viewModel.onShoppingCartViewClick()}"
            android:layout_marginLeft="@dimen/search_view_shop_car_icon_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/shop_car"
            android:src="@mipmap/ic_cart"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/search_view_shop_car_icon_width_and_height"
            android:layout_height="@dimen/search_view_shop_car_icon_width_and_height"/>

        <LinearLayout
            android:onClick="@{()->viewModel.onSearchViewClick()}"
            android:layout_toLeftOf="@id/shop_car"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:hint="@string/search_view_hint"
                android:paddingLeft="@dimen/search_view_edit_text_padding_left"
                android:paddingBottom="@dimen/search_view_edit_text_padding_bottom"
                android:gravity="bottom"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@drawable/shop_search_book_edit_text_background"
                android:textSize="@dimen/level_three_heading_font"
                android:text="@={viewModel.searchContent}"
                android:textColorHint="@color/gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/search_view_edit_text_height"/>

            <ImageView
                android:paddingLeft="@dimen/search_view_button_background_padding"
                android:paddingRight="@dimen/search_view_button_background_padding"
                android:layout_marginLeft="@dimen/search_view_search_icon_margin_left"
                android:id="@+id/search"
                android:src="@mipmap/ic_search"
                android:layout_width="@dimen/search_view_search_icon_width_and_height"
                android:layout_height="@dimen/search_view_search_icon_width_and_height"/>

        </LinearLayout>

    </RelativeLayout>

</layout>