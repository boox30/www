<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="TopUpDetailBinding">

        <variable
            name="userInfo"
            type="com.onyx.jdread.personal.cloud.entity.jdbean.UserInfo" />
    </data>

    <LinearLayout
        android:id="@+id/dialog_top_up_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_up_tips_margin_left"
            android:layout_marginTop="@dimen/top_up_tips_margin_top"
            android:text="@string/top_up_tips"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_up_tips_margin_left"
            android:text="@{@string/current_balance(userInfo.yuedou, userInfo.voucher)}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/dialog_top_up_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/top_up_tips_recycler_margin"
            android:layout_marginLeft="@dimen/top_up_tips_recycler_margin"
            android:layout_marginRight="@dimen/top_up_tips_recycler_margin"
            android:layout_marginTop="@dimen/top_up_tips_margin_top" />
    </LinearLayout>
</layout>
