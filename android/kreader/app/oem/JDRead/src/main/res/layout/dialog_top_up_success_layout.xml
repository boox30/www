<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="TopUpSuccessBinding">

    </data>

    <LinearLayout
        android:id="@+id/dialog_top_up_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_up_tips_margin_left"
            android:layout_marginTop="@dimen/top_up_tips_margin_top"
            android:text="@string/top_up_tips"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_up_success"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_one_heading_font" />
        </LinearLayout>

        <TextView
            android:id="@+id/top_up_continue"
            android:layout_width="@dimen/top_up_continue_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/top_up_qr_code_margin_bottom"
            android:background="@drawable/rectangle_stroke"
            android:gravity="center"
            android:padding="@dimen/top_up_continue_padding"
            android:text="@string/continue_top_up"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_one_heading_font" />
    </LinearLayout>
</layout>
