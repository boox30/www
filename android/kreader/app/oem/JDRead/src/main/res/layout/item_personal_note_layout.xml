<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="ItemPersonalNoteBinding">

        <variable
            name="bean"
            type="com.onyx.jdread.personal.cloud.entity.jdbean.NoteBean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="@dimen/personal_notes_image_padding"
            android:scaleType="centerCrop"
            bind:personalImage="@{bean.ebook.large_image_url}" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_personal_note_margin_left"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@{bean.ebook.name}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_personal_note_margin_top"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@{@string/notes_size(bean.note_count)}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/item_note_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{bean.checked}"/>
    </LinearLayout>
</layout>
