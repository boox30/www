<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="helpModel"
            type="com.onyx.jdread.setting.model.HelpModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.onyx.jdread.setting.ui.HelpFragment">

        <include
            android:id="@+id/help_title"
            layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_help_item_height"
                android:gravity="center_vertical"
                android:onClick="@{()->helpModel.gotoManual()}"
                android:paddingLeft="@dimen/fragment_content_padding"
                android:paddingRight="@dimen/fragment_content_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manual"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_two_heading_font" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_read_next" />
            </RelativeLayout>

            <View style="@style/DottedLineStyle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_help_item_height"
                android:gravity="center_vertical"
                android:onClick="@{()->helpModel.gotoFeedBack()}"
                android:paddingLeft="@dimen/fragment_content_padding"
                android:paddingRight="@dimen/fragment_content_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_two_heading_font" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_read_next" />
            </RelativeLayout>

            <View style="@style/DottedLineStyle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_help_item_height"
                android:gravity="center_vertical"
                android:onClick="@{()->helpModel.gotoContactUs()}"
                android:paddingLeft="@dimen/fragment_content_padding"
                android:paddingRight="@dimen/fragment_content_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_two_heading_font" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_read_next" />
            </RelativeLayout>

            <View style="@style/DottedLineStyle" />
        </LinearLayout>

    </LinearLayout>
</layout>
