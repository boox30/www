<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.onyx.jdread.shop.model.BookBatchDownloadViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_stroke_round"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/shop_dialog_title_height">

            <ImageView
                android:id="@+id/close_dialog"
                android:layout_width="@dimen/book_copyright_cancel_button_width_and_height"
                android:layout_height="@dimen/book_copyright_cancel_button_width_and_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/book_copyright_contain_padding"
                android:padding="@dimen/cancel_button_padding"
                android:src="@mipmap/ic_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/book_batch_download_buy_chapter"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

        </RelativeLayout>

        <include layout="@layout/layout_gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/book_copyright_contain_padding"
            android:paddingRight="@dimen/book_copyright_contain_padding">

            <com.onyx.android.sdk.ui.view.PageRecyclerView
                android:id="@+id/batch_download_recycler_view"
                chaptersItems="@{viewModel.dataBean.list}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/book_batch_download_recycle_view_height"
                android:layout_marginTop="@dimen/book_batch_download_recycle_view_margin_top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_batch_download_tip_margin_top"
                android:layout_marginBottom="@dimen/book_batch_download_tip_margin_bottom"
                android:text="@string/book_batch_download_tip"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

        </LinearLayout>

    </LinearLayout>

</layout>