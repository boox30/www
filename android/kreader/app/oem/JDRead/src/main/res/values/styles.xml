<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/OnyxAppCompat">

    </style>

    <style name="ActivityFullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PreloadActivityFullscreen" parent="@style/ActivityFullscreen">
        <item name="android:background">@drawable/preload</item>
    </style>

    <style name="CustomDialogStyle" parent="@style/OnyxAppCompat.AlertDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/rectangle_stroke_round</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="DottedLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/bg_dotted_line</item>
        <item name="android:layout_marginLeft">@dimen/fragment_content_padding</item>
        <item name="android:layout_marginRight">@dimen/fragment_content_padding</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="NoPaddingDottedLineType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@drawable/bg_dotted_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="book_detail_dot_line_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dashed_line_height</item>
        <item name="android:background">@drawable/bg_dotted_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/book_detail_ratingbar</item>
        <item name="android:minHeight">@dimen/rating_bar_style_min_height</item>
        <item name="android:maxHeight">@dimen/rating_bar_style_max_height</item>
    </style>

    <style name="BookDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ReaderTitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">@dimen/reader_title_bar_item_margin_right</item>
        <item name="android:padding">@dimen/reader_title_bar_item_padding</item>
    </style>

    <style name="ReaderTextSettingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/level_three_heading_font</item>
        <item name="android:layout_marginRight">@dimen/reader_text_setting_margin_right</item>
        <item name="android:padding">@dimen/reader_text_setting_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ReaderTextSettingFontStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_three_heading_font</item>
    </style>

    <style name="ReaderTextSettingFontSizeStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
    </style>

    <style name="ReaderMarginSettingFontSizeStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
    </style>

    <style name="ReaderTextSettingFormatStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_three_heading_font</item>
    </style>

    <style name="ReaderTextSettingLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">@dimen/reader_text_setting_layout_padding_left</item>
        <item name="android:paddingRight">@dimen/reader_text_setting_layout_padding_right</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ReaderVerticalSeparationLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="ReaderHorizontalSeparationLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="ReaderTextSettingItemParentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_stroke_corners</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="ReaderCustomizeFormatLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/reader_customize_format_layout_padding_top</item>
        <item name="android:paddingBottom">@dimen/reader_customize_format_layout_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/reader_customize_format_layout_padding_left</item>
        <item name="android:paddingRight">@dimen/reader_customize_format_layout_padding_right</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ReaderCustomizeFormatSeekBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:background">@drawable/focused_bg</item>
        <item name="android:max">20</item>
        <item name="android:maxHeight">@dimen/menu_seek_bar_height</item>
        <item name="android:minHeight">@dimen/menu_seek_bar_height</item>
        <item name="android:padding">@dimen/reader_page_info_menu_reading_process_padding</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="ReaderCustomizeFormatTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/reader_customize_format_title_margin_right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_three_heading_font</item>
    </style>

    <style name="ReaderCustomizeMinusStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/reader_customize_minus_style_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
        <item name="android:layout_marginRight">@dimen/reader_customize_minus_style_margin_right
        </item>
    </style>

    <style name="ReaderCustomizePlusStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/reader_customize_plus_style_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
        <item name="android:layout_marginLeft">@dimen/reader_customize_plus_style_margin_left</item>
    </style>

    <style name="ReaderImageSettingStyleChangeLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">
            @dimen/reader_image_setting_style_change_layout_drawable_padding
        </item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/reader_image_setting_style_change_layout_padding</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
    </style>

    <style name="ReaderPageInfoChapterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_three_heading_font</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ReaderPageInfoChapterSeekBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/focused_bg</item>
        <item name="android:max">20</item>
        <item name="android:maxHeight">8dp</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

    <style name="ReaderPageInfoLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ReaderPageInfoBookNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_weight">8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/reader_page_info_menu_book_name_padding</item>
        <item name="android:paddingRight">@dimen/reader_page_info_menu_book_name_padding</item>
        <item name="android:paddingTop">@dimen/reader_page_info_menu_book_name_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_three_heading_font</item>
    </style>

    <style name="PasswordEditTextStyle">
        <item name="android:layout_width">@dimen/password_setting_edit_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/level_three_heading_font</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="ReaderTitleBarBuyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:clickable">true</item>
    </style>

    <dimen name="password_setting_edit_width">402dp</dimen>

    <style name="ReaderBookInfoTabStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dialog_no_title" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/square_bg</item>
        <item name="colorAccent">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowElevation" tools:targetApi="M">0dp</item>
    </style>

    <style name="ReaderBookInfoBookmarkItemTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/level_four_heading_font</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ReaderBookInfoNoteItemTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ReaderBookInfoBookmarkItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ReaderBookInfoNoteItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="popup_selection_menu_text_view">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="reader_popup_selection_menu_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/level_two_heading_font</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/reader_select_menu_padding_top</item>
        <item name="android:paddingBottom">@dimen/reader_select_menu_padding_bottom</item>
    </style>

    <style name="reader_dotted_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/bg_dotted_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="search_button">
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">@dimen/search_button_margin</item>
    </style>
</resources>
