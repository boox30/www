<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.onyx.jdread.shop.model.MainConfigEndViewModel" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:onClick="@{()->viewModel.onViewAllBookViewClick()}"
            android:text="@string/view_all_books"
            android:background="@drawable/bottom_line"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font" />

        <TextView
            android:id="@+id/back_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shop_back_top_button_margin_top"
            android:background="@drawable/rectangle_stroke_round"
            android:gravity="center"
            android:onClick="@{()->viewModel.onBackTopViewClick()}"
            android:padding="@dimen/shop_back_top_button_padding"
            android:text="@string/back_to_top"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_two_heading_font" />

        <View
            android:visibility="@{viewModel.showEmptyView ? View.VISIBLE : View.GONE}"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/end_view_empty_height"/>

    </LinearLayout>

</layout>