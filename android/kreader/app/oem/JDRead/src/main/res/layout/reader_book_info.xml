<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.onyx.jdread.reader.menu.common.ReaderBookInfoDialogConfig" />

        <variable
            name="readerBookInfoModel"
            type="com.onyx.jdread.reader.catalog.model.ReaderBookInfoModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/reader_book_info_title_bar"
            layout="@layout/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/ReaderHorizontalSeparationLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/ReaderBookInfoTabStyle"
                android:onClick="@{()->readerBookInfoModel.onTabCatalogClick()}"
                android:text="@string/reader_menu_catalog"
                android:textSize="@{readerBookInfoModel.currentTab == ReaderBookInfoDialogConfig.CATALOG_MODE?@dimen/level_large_heading_font:@dimen/level_two_heading_font}" />

            <View style="@style/ReaderVerticalSeparationLine" />

            <TextView
                style="@style/ReaderBookInfoTabStyle"
                android:onClick="@{()->readerBookInfoModel.onTabBookmarkClick()}"
                android:text="@string/reader_book_info_bookmark"
                android:textSize="@{readerBookInfoModel.currentTab == ReaderBookInfoDialogConfig.BOOKMARK_MODE?@dimen/level_large_heading_font:@dimen/level_two_heading_font}" />

            <View style="@style/ReaderVerticalSeparationLine" />

            <TextView
                style="@style/ReaderBookInfoTabStyle"
                android:onClick="@{()->readerBookInfoModel.onTabNoteClick()}"
                android:text="@string/reader_book_info_note"
                android:textSize="@{readerBookInfoModel.currentTab == ReaderBookInfoDialogConfig.NOTE_MODE?@dimen/level_large_heading_font:@dimen/level_two_heading_font}" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/book_info_content_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{readerBookInfoModel.isEmpty?View.VISIBLE:View.GONE}">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dialog_empty_view" />
        </LinearLayout>

        <com.onyx.android.sdk.ui.view.TreeRecyclerView
            android:id="@+id/book_info_catalog_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:visibility="@{readerBookInfoModel.currentTab == ReaderBookInfoDialogConfig.CATALOG_MODE?View.VISIBLE:View.GONE}" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/book_info_bookmark_content"
            bookmarks="@{readerBookInfoModel.bookmarks}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:visibility="@{readerBookInfoModel.currentTab == ReaderBookInfoDialogConfig.BOOKMARK_MODE?View.VISIBLE:View.GONE}" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/book_info_note_content"
            notes="@{readerBookInfoModel.notes}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:visibility="@{readerBookInfoModel.currentTab == ReaderBookInfoDialogConfig.NOTE_MODE?View.VISIBLE:View.GONE}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="@{readerBookInfoModel.pageInfo}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font" />
    </LinearLayout>
</layout>