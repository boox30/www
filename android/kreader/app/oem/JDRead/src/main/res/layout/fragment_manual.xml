<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.onyx.jdread.setting.ui.ManualFragment">

        <include
            android:id="@+id/manual_title"
            layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/manual_qr_code_margin_top"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/manual_qr_code_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_introduce"
                    android:layout_width="@dimen/manual_qr_code_width"
                    android:layout_height="@dimen/manual_qr_code_width" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/manual_qr_code_text_margin_top"
                    android:text="@string/product_introduce"
                    android:textSize="@dimen/level_two_heading_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/manual_qr_code_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/common_problem"
                    android:layout_width="@dimen/manual_qr_code_width"
                    android:layout_height="@dimen/manual_qr_code_width" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/manual_qr_code_text_margin_top"
                    android:text="@string/common_problem"
                    android:textSize="@dimen/level_two_heading_font" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
