<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.onyx.jdread.setting.ui.ManualFragment">

        <include
            android:id="@+id/manual_title"
            layout="@layout/title_bar" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/manual_qr_code_margin_top">

            <ImageView
                android:id="@+id/product_introduce"
                android:layout_width="@dimen/manual_qr_code_width"
                android:layout_height="@dimen/manual_qr_code_width"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/manual_dec_margin_top"
                android:text="@string/product_introduce"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />
        </RelativeLayout>
    </LinearLayout>
</layout>
