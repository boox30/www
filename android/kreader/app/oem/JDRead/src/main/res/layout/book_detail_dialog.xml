<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_stroke_corners"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/book_detail_dialog_contain_close_margin_bottom"
        android:layout_marginLeft="@dimen/book_detail_dialog_contain_close_margin_left"
        android:layout_marginRight="@dimen/book_detail_dialog_contain_close_margin_right"
        android:layout_marginTop="@dimen/book_detail_dialog_contain_close_margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_book_detail_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_one_heading_font" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/dark" />

    <LinearLayout
        android:id="@+id/ll_book_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_book_detail_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/book_detail_dialog_message_margin_left"
            android:layout_marginTop="@dimen/book_detail_dialog_message_margin_top"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_two_heading_font" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/book_detail_dialog_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/book_detail_dialog_contain_go_margin_bottom"
        android:layout_marginTop="@dimen/book_detail_dialog_contain_go_margin_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_book_detail_dialog_refuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dialog_button_padding_top"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_two_heading_font" />

        <TextView
            android:id="@+id/tv_book_detail_dialog_go"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dialog_button_padding_top"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_two_heading_font" />
    </LinearLayout>

</LinearLayout>