<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="DialogTopUpBinding">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/top_up_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/top_up"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_one_heading_font" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_close" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_up_tips_margin_left"
            android:layout_marginTop="@dimen/top_up_tips_margin_top"
            android:text="@string/top_up_tips"
            android:textSize="@dimen/level_three_heading_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_up_tips_margin_left"
            android:layout_marginTop="@dimen/top_up_tips_margin_top"
            android:text="gbajgoasidjgdj"
            android:textSize="@dimen/level_three_heading_font" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/dialog_top_up_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/top_up_tips_recycler_margin" />
    </LinearLayout>
</layout>
