<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="PersonalBookBinding">

        <variable
            name="filterName"
            type="String" />

        <variable
            name="books"
            type="int" />

        <variable
            name="page"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/personal_book_title"
                layout="@layout/title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/setting_title_bar_padding"
                android:layout_marginRight="@dimen/setting_title_bar_padding"
                android:layout_marginTop="@dimen/setting_title_bar_padding"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/personal_book_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_search" />

                <TextView
                    android:id="@+id/personal_book_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_book_filter_margin_left"
                    android:drawablePadding="@dimen/personal_book_title_down_padding"
                    android:drawableRight="@mipmap/ic_down"
                    android:text="@{filterName}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_two_heading_font" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/fragment_content_padding_bottom"
            android:paddingLeft="@dimen/fragment_content_padding"
            android:paddingRight="@dimen/fragment_content_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.onyx.android.sdk.ui.view.PageRecyclerView
                    android:id="@+id/personal_book_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/personal_book_recycler_padding" />

                <TextView
                    android:id="@+id/empty_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/ic_shelf_book_none"
                    android:text="@string/empty_library_prompt"
                    android:textSize="@dimen/level_two_heading_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_book_recycler_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/book_total(books)}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_three_heading_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@{page}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_three_heading_font" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
