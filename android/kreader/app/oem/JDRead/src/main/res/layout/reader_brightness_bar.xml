<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="brightnessModel"
            type="com.onyx.jdread.setting.model.BrightnessModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="@{brightnessModel.isShow?View.VISIBLE:View.GONE}">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/reader_brightness_bar_padding"
            android:paddingTop="@dimen/reader_brightness_bar_padding">

            <TextView
                android:layout_width="@dimen/brightness_button_width"
                android:layout_height="@dimen/brightness_button_height"
                android:background="@drawable/rectangle_stroke_round"
                android:gravity="center"
                android:onClick="@{()->brightnessModel.closeBrightness()}"
                android:text="@string/closed"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingbar_light_settings"
                style="@style/LightSettingsRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/reader_ratingbar_light_settings_margin"
                android:layout_marginRight="@dimen/reader_ratingbar_light_settings_margin"
                android:paddingTop="@dimen/ratingbar_light_top_bottom_padding"
                android:paddingBottom="@dimen/ratingbar_light_top_bottom_padding"
                android:max="@{brightnessModel.maxLight}"
                android:numStars="@{brightnessModel.numStar}"
                android:progress="@{brightnessModel.progress}"
                android:progressDrawable="@drawable/reader_light_bar_step"
                android:stepSize="1.0" />

            <TextView
                android:layout_width="@dimen/brightness_button_width"
                android:layout_height="@dimen/brightness_button_height"
                android:background="@drawable/rectangle_stroke_round"
                android:gravity="center"
                android:onClick="@{()->brightnessModel.maxBrightness()}"
                android:text="@string/brightest_brightness"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</layout>