<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="BannerSubjectModelItemBinding">

        <variable
            name="advBean"
            type="com.onyx.jdread.shop.cloud.entity.jdbean.BookModelConfigResultBean.DataBean.AdvBean" />

    </data>

    <com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_cover"
                android:layout_width="@dimen/banner_subject_model_item_width"
                android:layout_height="@dimen/banner_subject_model_item_height"
                android:scaleType="fitXY"
                bind:cover="@{advBean.pic_address}" />

        </LinearLayout>

    </com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>

</layout>