<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.onyx.jdread.common.CommonUtils" />

        <import type="android.view.View" />

        <variable
            name="bookDetailViewModel"
            type="com.onyx.jdread.shop.model.BookDetailViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/book_detail_cover"
                    android:layout_width="@dimen/layout_book_detail_cover_width"
                    android:layout_height="@dimen/layout_book_detail_cover_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/book_default_cover"
                    bind:cover="@{bookDetailViewModel.bookDetailResultBean.detail.getLargeLogo()}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_book_detail_cover_height"
                    android:layout_marginLeft="@dimen/layout_book_detail_contain_book_info_margin_left"
                    android:layout_toRightOf="@id/book_detail_cover"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/book_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:maxLines="2"
                        android:text="@{bookDetailViewModel.bookDetailResultBean.detail.getBookName()}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/level_two_heading_font" />

                    <TextView
                        android:id="@+id/book_detail_author"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/book_detail_author_margin_top"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/view_all_drawable_padding"
                        android:drawableRight="@mipmap/ic_go_view_all"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@{bookDetailViewModel.bookDetailResultBean.detail.getAuthor()}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/level_three_heading_font" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/book_detail_rating_bar"
                            style="@style/RatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="@{bookDetailViewModel.bookDetailResultBean.detail.getStar()}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/book_detail_sub_info_margin_left"
                            android:text="@{@string/book_detail_star(bookDetailViewModel.bookDetailResultBean.detail.getStar())}"
                            android:textSize="@dimen/level_three_heading_font" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/book_detail_yuedou_price_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/book_detail_yuedou_price(bookDetailViewModel.bookDetailResultBean.detail.getPrice())}"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/level_three_heading_font" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/book_detail_sub_info_margin_left"
                            android:text="@{@string/book_detail_yuedou_price(bookDetailViewModel.bookDetailResultBean.detail.getJdPrice())}"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/level_three_heading_font" />

                        <TextView
                            android:id="@+id/book_detail_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/book_detail_discount_margin_left"
                            android:background="@drawable/rectangle_stroke_dark"
                            android:paddingLeft="@dimen/book_detail_discount_padding_left_and_right"
                            android:paddingRight="@dimen/book_detail_discount_padding_left_and_right"
                            android:text="@{@string/book_detail_yuedou_discount(CommonUtils.calculateDiscount(bookDetailViewModel.bookDetailResultBean.detail.getPrice(),bookDetailViewModel.bookDetailResultBean.detail.getJdPrice()))}"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/level_three_heading_font" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/book_detail_category_path"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/view_all_drawable_padding"
                            android:drawableRight="@mipmap/ic_go_view_all"
                            android:text="@{bookDetailViewModel.bookDetailResultBean.detail.getPublishTime()}" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_detail_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="@{bookDetailViewModel.bookDetailResultBean.detail.isTryRead ? View.VISIBLE : View.GONE}"
                        android:id="@+id/book_detail_now_read"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_stroke"
                        android:enabled="@{bookDetailViewModel.bookDetailResultBean != null}"
                        android:gravity="center"
                        android:onClick="@{()->bookDetailViewModel.onNowReadClick()}"
                        android:padding="@dimen/book_detail_button_padding"
                        android:text="@string/book_detail_button_now_read"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/level_three_heading_font"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/book_detail_buy_book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/book_detail_button_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_stroke"
                        android:enabled="@{bookDetailViewModel.bookDetailResultBean != null}"
                        android:gravity="center"
                        android:onClick="@{()->bookDetailViewModel.onDownBookClick()}"
                        android:padding="@dimen/book_detail_button_padding"
                        android:text="@string/book_detail_button_buy_whole_book"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/level_three_heading_font"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/book_detail_button_margin"
                    android:layout_marginRight="@dimen/book_detail_button_margin"
                    android:layout_weight="1"
                    android:background="@drawable/normal_selected_background"
                    android:gravity="center"
                    android:onClick="@{()->bookDetailViewModel.onShoppingCartClick()}"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/search_view_shop_car_icon_width_and_height"
                        android:layout_height="@dimen/search_view_shop_car_icon_width_and_height"
                        android:padding="@dimen/search_view_button_background_padding"
                        android:src="@mipmap/ic_cart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cart"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_detail_text_view_content_introduce_margin_top"
                android:text="@string/book_detail_text_view_content_introduce"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

            <com.onyx.jdread.shop.view.HtmlTextView
                android:id="@+id/book_detail_content_introduction"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/book_detail_margin"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                bind:htmlContent="@{bookDetailViewModel.bookDetailResultBean.detail.getInfo()}"
                android:textSize="@dimen/level_three_heading_font" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_detail_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/text_no_stoke_background"
                    android:drawablePadding="@dimen/view_all_drawable_padding"
                    android:drawableRight="@mipmap/ic_go_view_all"
                    android:gravity="center"
                    android:onClick="@{()->bookDetailViewModel.onViewDirectoryClick()}"
                    android:text="@string/book_detail_view_directory"
                    android:textSize="@dimen/level_three_heading_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/text_no_stoke_background"
                    android:drawablePadding="@dimen/view_all_drawable_padding"
                    android:drawableRight="@mipmap/ic_go_view_all"
                    android:gravity="center"
                    android:onClick="@{()->bookDetailViewModel.onViewCommentClick()}"
                    android:text="@string/book_detail_view_comments"
                    android:textSize="@dimen/level_three_heading_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/text_no_stoke_background"
                    android:drawablePadding="@dimen/view_all_drawable_padding"
                    android:drawableRight="@mipmap/ic_go_view_all"
                    android:gravity="center"
                    android:onClick="@{()->bookDetailViewModel.onCopyrightClick()}"
                    android:text="@string/book_detail_view_copyright"
                    android:textSize="@dimen/level_three_heading_font" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dashed_line_height"
                android:layout_marginBottom="@dimen/book_detail_margin"
                android:layout_marginTop="@dimen/book_detail_margin"
                android:background="@mipmap/ic_dashed_line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_detail_text_view_recommend_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.onyx.android.sdk.ui.view.PageRecyclerView
                    android:id="@+id/recycler_view_recommend"
                    recommendItems="@{bookDetailViewModel.recommendList}"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/book_detail_recycler_view_recommend_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/book_detail_recycler_view_recommend_height"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/book_detail_margin"
                    android:background="@drawable/normal_selected_background"
                    android:onClick="@{()->bookDetailViewModel.onRecommendNextPageClick()}"
                    android:padding="@dimen/book_detail_button_padding"
                    android:src="@mipmap/ic_page_next" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>