<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemModel"
            type="com.onyx.jdread.setting.model.DeviceInformationModel.ItemModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:onClick="@{()->itemModel.onClick()}"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@{itemModel.text}"
            android:textSize="@dimen/level_one_heading_font" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_read_next"
            android:visibility="@{itemModel.clickable?View.VISIBLE:View.GONE}" />
    </RelativeLayout>
</layout>