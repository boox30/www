<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="RefreshBinding">

        <variable
            name="recyclerEnable"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/refresh_title_bar"
            layout="@layout/setting_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/refresh_whole_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/refresh_tips"
                android:textSize="@dimen/level_three_heading_font" />

            <com.onyx.android.sdk.ui.view.PageRecyclerView
                android:id="@+id/refresh_recycler"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lock_screen_recycler_height"
                android:layout_marginTop="@dimen/refresh_whole_top"
                android:background="@{recyclerEnable ? @color/divider_color : @android:color/white}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/divider_color" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/refresh_whole_top">

                <TextView
                    android:id="@+id/refresh_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refresh_mode"
                    android:textSize="@dimen/level_two_heading_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/refresh_mode"
                    android:text="@string/refresh_mode_tips"
                    android:textSize="@dimen/level_three_heading_font" />

                <Switch
                    android:id="@+id/refresh_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:layout_marginTop="@dimen/refresh_whole_top"
                android:background="@color/divider_color" />
        </LinearLayout>
    </LinearLayout>
</layout>
