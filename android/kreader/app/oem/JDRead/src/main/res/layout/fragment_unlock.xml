<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="screenLockModel"
            type="com.onyx.jdread.main.model.LockScreenModel" />
    </data>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/password_setting_content_margin_top"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".setting.ui.UnlockFragment">

        <TextView
            style="@style/PasswordEditTextStyle"
            android:background="@null"
            android:gravity="center"
            android:text="@string/password" />

        <EditText
            android:id="@+id/password_un_encrypt_edit"
            style="@style/PasswordEditTextStyle"
            android:layout_marginTop="@dimen/lock_screen_password_margin_top"
            android:hint="@string/input_number_un_encrypt"
            android:imeOptions="actionNone"
            android:inputType="numberPassword"
            android:text="@={screenLockModel.passwordEdit}" />

        <TextView
            android:layout_width="@dimen/password_setting_confirm_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unlock_password_text_margin_top"
            android:background="@drawable/rectangle_stroke"
            android:gravity="center"
            android:onClick="@{()->screenLockModel.unlockScreen()}"
            android:padding="@dimen/edit_text_padding"
            android:text="@string/confirm"
            android:textColor="@android:color/black" />
    </LinearLayout>

</layout>
