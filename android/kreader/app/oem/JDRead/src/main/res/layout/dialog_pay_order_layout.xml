<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="orderModel"
            type="com.onyx.jdread.shop.model.PayOrderViewModel" />

        <import type="com.onyx.jdread.shop.utils.ViewHelper" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:id="@+id/dialog_pay_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_up_tips_margin_left"
        android:layout_marginRight="@dimen/top_up_tips_margin_left"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_up_tips_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{orderModel.orderInfo.desc}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_pay_order_item_margin_top"
                android:text="@{@string/dialog_pay_order_book_price(orderModel.orderInfo.pay_amount)}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_17" />

            <TextView
                android:id="@+id/pay_order_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_pay_order_item_margin_top"
                android:text="@{@string/dialog_pay_order_cur_balance(orderModel.orderInfo.yuedou_amount,orderModel.orderInfo.voucher_amount)}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_17" />

            <LinearLayout
                android:id="@+id/payment_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_pay_order_payment_item_margin_top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="@{orderModel.showPaymentLinearLayout ? View.VISIBLE : View.INVISIBLE}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_pay_order_pay_type"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_17" />

                <RadioGroup
                    android:id="@+id/payment_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/payment_read_bean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dialog_pay_order_payment_bean_margin_left"
                        android:background="@drawable/radio_button_transparent_background"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/radio_button_style"
                        android:drawablePadding="@dimen/radio_button_drawable_padding"
                        android:text="@string/read_bean"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_17" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/payment_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dialog_pay_order_payment_cash_margin_left"
                        android:background="@drawable/radio_button_transparent_background"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_button_style"
                        android:drawablePadding="@dimen/radio_button_drawable_padding"
                        android:text="@string/dialog_pay_order_cash"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_17" />

                </RadioGroup>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_order_by_cash_relative_layout_height">

                <TextView
                    android:id="@+id/pay_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_17"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/confirm_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dialog_pay_order_confirm_pay_margin_top"
                    android:background="@drawable/rectangle_stroke_round"
                    android:gravity="center"
                    android:onClick="@{()->orderModel.onConfirmPayClick()}"
                    android:padding="@dimen/dialog_pay_order_confirm_pay_padding"
                    android:text="@{orderModel.confirmButtonText}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_17" />

                <LinearLayout
                    android:id="@+id/pay_by_cash_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/pay_by_cash_qrcode_container_margin_top"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/top_up_qr_code"
                        android:layout_width="@dimen/top_up_qr_code_height"
                        android:layout_height="@dimen/top_up_qr_code_height"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/pay_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/pay_by_cash_payment_tips_margin_top"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_19" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
