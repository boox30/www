<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="com.onyx.jdread.shop.ui.StoreFragment"/>

        <variable
            name="viewModel"
            type="com.onyx.jdread.shop.model.BookStoreViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/book_store_padding_top"
        android:paddingLeft="@dimen/book_store_padding_left_right"
        android:paddingRight="@dimen/book_store_padding_left_right"
        tools:context="com.onyx.jdread.shop.ui.StoreFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_no_stoke_background"
                    android:text="@{viewModel.coverSubjectIems.modelBean.moduleBookChild.showName}"
                    android:textSize="@dimen/level_two_heading_font"/>

                <TextView
                    android:onClick="@{()->viewModel.coverSubjectIems.onViewAllClick()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/text_no_stoke_background"
                    android:text="@string/view_all"
                    android:textSize="@dimen/level_three_heading_font"/>

            </RelativeLayout>

            <com.onyx.android.sdk.ui.view.PageRecyclerView
                android:id="@+id/recycler_view_one_backup"
                subjectItems="@{viewModel.coverSubjectIems.modelBean.resultList}"
                android:layout_marginTop="@dimen/bookstore_recycler_view_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/book_store_recycler_height"/>

        </LinearLayout>

        <Button
            android:onClick="@{()->viewModel.onBackTopViewClick()}"
            android:id="@+id/back_top"
            android:layout_marginTop="@dimen/back_top_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_to_top"
            android:textSize="@dimen/level_two_heading_font"/>

    </LinearLayout>

</layout>
