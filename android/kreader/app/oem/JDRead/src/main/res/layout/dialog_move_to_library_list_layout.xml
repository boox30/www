<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.onyx.android.sdk.utils.StringUtils" />

        <import type="android.view.View" />

        <variable
            name="dialogModel"
            type="com.onyx.jdread.library.view.MoveToLibraryListDialog.DialogModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/level_two_heading_font"
                android:text="@string/move_to" />

            <ImageView
                android:id="@+id/close_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/selected_background"
                android:src="@mipmap/ic_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.onyx.android.sdk.ui.view.PageRecyclerView
                android:id="@+id/recycler"
                items="@{dialogModel.items}"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.onyx.jdread.library.view.CustomScrollBar
                focus="@{dialogModel.focusPosition}"
                totalPage="@{dialogModel.totalPage}"
                android:layout_width="@dimen/dialog_move_to_library_list_scroll_bar_width"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->dialogModel.onBuildLibraryClicked()}"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/level_two_heading_font"
            android:background="@drawable/selected_background"
            android:text="@string/build_library" />
    </LinearLayout>

</layout>