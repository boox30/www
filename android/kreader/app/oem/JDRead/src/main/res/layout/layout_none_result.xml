<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="NoneResultBinding">

        <variable
            name="viewModel"
            type="com.onyx.jdread.main.model.NoneResultModel" />
    </data>

    <RelativeLayout
        android:id="@+id/layout_none_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/none_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@{viewModel.imageResId}" />

            <TextView
                android:id="@+id/none_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.text}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

        </LinearLayout>

    </RelativeLayout>

</layout>