<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="dialogSearchModel"
            type="com.onyx.jdread.reader.menu.model.DialogSearchModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/search_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/dialog_search_edit_padding"
            android:visibility="@{dialogSearchModel.searchInputLayout?View.VISIBLE:View.GONE}">

            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/imagebtn_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->dialogSearchModel.backClick()}"
                android:orientation="horizontal"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dialog_reader_menu_arrow" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/search_image"
                android:layout_toRightOf="@+id/back_layout"
                android:background="@drawable/shop_search_book_edit_text_background"
                android:padding="5dp">

                <com.onyx.android.sdk.ui.view.OnyxCustomEditText
                    android:id="@+id/edit_view_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/delete_input_word"
                    android:background="@null"
                    android:hint="@string/enter_hint"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/delete_input_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:onClick="@{()->dialogSearchModel.deleteInputWordClick()}"
                    android:src="@mipmap/ic_read_close"
                    android:visibility="@{dialogSearchModel.deleteInputWord?View.VISIBLE:View.GONE}" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/search_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:onClick="@{()->dialogSearchModel.searchImageClick()}"
                android:src="@mipmap/ic_read_search" />
        </RelativeLayout>

        <View
            android:id="@+id/divider_line"
            style="@style/single_line_X_axis_View"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:visibility="@{dialogSearchModel.dividerLine?View.VISIBLE:View.GONE}" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/search_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="@{dialogSearchModel.searchContent?View.VISIBLE:View.GONE}">

                <TextView
                    android:id="@+id/total_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:text="@{dialogSearchModel.totalPage}"
                    android:textColor="@color/normal_black"
                    android:textSize="20sp"
                    android:visibility="@{dialogSearchModel.totalPageShow?View.VISIBLE:View.GONE}" />

                <com.onyx.android.sdk.ui.view.PageRecyclerView
                    android:id="@+id/search_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">

                </com.onyx.android.sdk.ui.view.PageRecyclerView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/page_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@{dialogSearchModel.pageIndicator}"
                        android:textColor="@color/normal_black"
                        android:textSize="20sp"
                        android:visibility="@{dialogSearchModel.totalPageShow?View.VISIBLE:View.GONE}"/>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_history_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_history_bg"
                android:paddingBottom="5dp"
                android:visibility="@{dialogSearchModel.searchHistory?View.VISIBLE:View.GONE}">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/search_history_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/close_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/search_history_list"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/delete_history"
                    android:background="@drawable/focused_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{()->dialogSearchModel.closeHistoryClick()}"
                    android:text="@string/close_history"
                    android:textColor="@color/normal_black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/delete_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/search_history_list"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/focused_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{()->dialogSearchModel.deleteHistoryClick()}"
                    android:text="@string/delete_history"
                    android:textColor="@color/normal_black" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/loading_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dialog_border"
                android:gravity="center"
                android:visibility="@{dialogSearchModel.loadingLayout?View.VISIBLE:View.GONE}">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/textview_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/reader_searching"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dialog_loading_text_size" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_black"></View>

                <ImageButton
                    android:id="@+id/close_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/imagebtn_bg"
                    android:clickable="true"
                    android:onClick="@{()->dialogSearchModel.closeSearchClick()}"
                    android:src="@drawable/ic_dialog_close" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_float_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{dialogSearchModel.floatToolBar?View.VISIBLE:View.GONE}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/search_bottom"
                    android:background="@android:color/transparent"
                    android:onClick="@{()->dialogSearchModel.dismissZoneClick()}" />

                <LinearLayout
                    android:id="@+id/search_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/search_toolbar_layout_bg"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/ellipse_view_padding"
                    android:paddingRight="@dimen/ellipse_view_padding"
                    android:paddingTop="10dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:onClick="@{()->dialogSearchModel.searchPrevClick()}"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/search_prev"
                            style="@style/search_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/ic_read_last" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="上一个"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/level_three_heading_font" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/search_back"
                        style="@style/search_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:onClick="@{()->dialogSearchModel.searchBackClick()}"
                        android:src="@mipmap/ic_read_search" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:onClick="@{()->dialogSearchModel.searchNextClick()}"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="下一个"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/level_three_heading_font" />

                        <ImageButton
                            android:id="@+id/search_next"
                            style="@style/search_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/ic_read_next" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/book_info_content_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="@{dialogSearchModel.isEmpty?View.VISIBLE:View.GONE}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_result_none"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_three_heading_font"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</layout>