<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="readingToolsModel"
            type="com.onyx.jdread.setting.model.ReadingToolsModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/reading_tools_title"
            layout="@layout/title_bar" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/reading_tools_recycler"
            items="@{readingToolsModel.list}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reading_tools_recycler_height"
            android:padding="@dimen/device_config_recycler_padding" />
    </LinearLayout>
</layout>