<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.onyx.android.sdk.utils.StringUtils" />

        <variable
            name="itemModel"
            type="com.onyx.jdread.setting.model.ScreenSaversModel.ItemModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="@{()->itemModel.onClick()}"
        android:visibility="@{StringUtils.isNullOrEmpty(itemModel.picPath)?View.GONE:View.VISIBLE}">

        <ImageView
            android:id="@+id/screen_saver_image"
            cover="@{itemModel.picPath}"
            android:layout_width="@dimen/screen_savers_item_width"
            android:layout_height="@dimen/screen_savers_item_height"
            android:background="@{itemModel.isChecked?@drawable/screen_savers_selected:@drawable/rectangle_stroke}"
            android:padding="@{itemModel.isChecked?@dimen/screen_saver_selected_width:@dimen/rectangle_stroke_width}" />

        <TextView
            android:layout_width="@dimen/screen_savers_item_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/screen_saver_image"
            android:layout_marginTop="@dimen/screen_savers_item_text_margin"
            android:gravity="center"
            android:text="@{itemModel.name}"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</layout>