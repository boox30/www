<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="singleNoteViewModel"
            type="com.onyx.jdread.reader.model.SingleNoteViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.onyx.jdread.reader.ui.view.PageTextView
            android:id="@+id/translate_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="12"
            android:layout_weight="9"
            android:clickable="true"
            android:textSize="@dimen/level_two_heading_font"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="@{singleNoteViewModel.page}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font"
            android:visibility="@{singleNoteViewModel.isShowPage?View.VISIBLE:View.GONE}"/>
    </LinearLayout>
</layout>