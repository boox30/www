<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="functionBarTabModel"
            type="com.onyx.jdread.model.FunctionBarTabModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imagebtn_bg"
        android:gravity="center"
        android:onClick="@{()->functionBarTabModel.tabClicked()}"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/normal_black"
            android:visibility="@{functionBarTabModel.isSelected?View.VISIBLE:View.INVISIBLE}" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{functionBarTabModel.drawableTop}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{functionBarTabModel.itemName}" />
    </LinearLayout>
</layout>