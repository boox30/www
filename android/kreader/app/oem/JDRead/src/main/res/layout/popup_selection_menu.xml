<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="selectMenuModel"
            type="com.onyx.jdread.reader.model.SelectMenuModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{selectMenuModel.isShowSelectMenu?View.VISIBLE:View.GONE}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_stroke"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/reader_select_menu_padding_bottom"
            android:paddingLeft="@dimen/reader_select_menu_padding_left"
            android:paddingRight="@dimen/reader_select_menu_padding_right"
            android:paddingTop="@dimen/reader_select_menu_padding_top">

            <TextView
                style="@style/reader_popup_selection_menu_style"
                android:text="@string/lineation" />

            <TextView
                style="@style/reader_popup_selection_menu_style"
                android:text="@string/reader_book_info_note" />

            <TextView
                style="@style/reader_popup_selection_menu_style"
                android:text="@string/copy" />

            <TextView
                style="@style/reader_popup_selection_menu_style"
                android:text="@string/translation" />

            <TextView
                style="@style/reader_popup_selection_menu_style"
                android:text="@string/baidupedia" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{selectMenuModel.isShowDictionaryMenu?View.VISIBLE:View.GONE}">

        </LinearLayout>
    </LinearLayout>

</layout>