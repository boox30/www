<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="readerTitleBarModel"
            type="com.onyx.jdread.reader.menu.model.ReaderTitleBarModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="@{readerTitleBarModel.isShow?View.VISIBLE:View.GONE}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="3"
                android:gravity="center_vertical">

                <TextView
                    style="@style/ReaderTitleBarBuyStyle"
                    android:layout_marginRight="@dimen/reader_title_back_margin_right"
                    android:drawableLeft="@mipmap/ic_read_back"
                    android:drawablePadding="@dimen/reader_title_bar_drawable_padding"
                    android:gravity="center_vertical"
                    android:onClick="@{()->readerTitleBarModel.backClick()}"
                    android:padding="@dimen/reader_title_back_padding" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:orientation="horizontal">

                <ImageView
                    style="@style/ReaderTitleBarStyle"
                    android:onClick="@{()->readerTitleBarModel.buyBookClick()}"
                    android:src="@mipmap/ic_read_buy"
                    android:visibility="@{readerTitleBarModel.isBuy?View.VISIBLE:View.GONE}" />

                <ImageView
                    style="@style/ReaderTitleBarStyle"
                    android:onClick="@{()->readerTitleBarModel.searchContextClick()}"
                    android:src="@mipmap/ic_read_search"
                    android:visibility="@{readerTitleBarModel.isSearchContext?View.VISIBLE:View.GONE}" />

                <ImageView
                    style="@style/ReaderTitleBarStyle"
                    android:onClick="@{()->readerTitleBarModel.bookmarkCLick()}"
                    android:src="@{readerTitleBarModel.bookMarkImageId}" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />
    </LinearLayout>
</layout>
