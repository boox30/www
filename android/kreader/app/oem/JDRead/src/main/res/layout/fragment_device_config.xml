<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="DeviceConfigBinding">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/device_config_title_bar"
            layout="@layout/setting_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/device_config_recycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_config_recycler_height"
            android:padding="@dimen/device_config_recycler_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/divider_color"
            android:layout_marginLeft="@dimen/device_config_recycler_padding"
            android:layout_marginRight="@dimen/device_config_recycler_padding"/>
    </LinearLayout>
</layout>
