<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="laboratoryModel"
            type="com.onyx.jdread.setting.model.LaboratoryModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.onyx.jdread.setting.ui.LaboratoryFragment">

        <include
            android:id="@+id/laboratory_title"
            layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fragment_content_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/quick_back_button"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/level_one_heading_font" />

                <Switch
                    android:id="@+id/switch_show_quick_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="@={laboratoryModel.showBack}"
                    android:onClick="@{()->laboratoryModel.toggleBackTab()}"
                    android:switchMinWidth="@dimen/switch_track_width"
                    android:textColor="@android:color/white"
                    android:textOff="@string/off"
                    android:textOn="@string/on"
                    android:thumb="@drawable/thumb_selector"
                    android:track="@drawable/gray_track"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/toggle_selector"
                        android:button="@null"
                        android:checked="@={laboratoryModel.showBack}"
                        android:onClick="@{()->laboratoryModel.toggleBackTab()}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/on"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/level_three_heading_font" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/off"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/level_three_heading_font" />
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/quick_back_button_explanation_margin_right"
                android:lineSpacingExtra="@dimen/switch_show_quick_button_text_margin"
                android:text="@string/quick_back_button_explanation"
                android:textSize="@dimen/level_three_heading_font" />

            <View
                style="@style/DottedLineStyle"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />
        </LinearLayout>

    </LinearLayout>
</layout>
