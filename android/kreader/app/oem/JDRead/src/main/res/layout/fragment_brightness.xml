<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="brightnessModel"
            type="com.onyx.jdread.setting.model.BrightnessModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.onyx.jdread.setting.ui.BrightnessFragment">

        <include
            layout="@layout/title_bar"
            bind:titleModel="@{brightnessModel.titleBarModel}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/brightness_rating_ba_margin_top"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/brightness_button_width"
                android:layout_height="@dimen/brightness_button_height"
                android:background="@drawable/rectangle_stroke_round"
                android:gravity="center"
                android:onClick="@{()->brightnessModel.closeBrightness()}"
                android:text="@string/closed"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/level_three_heading_font"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingbar_light_settings"
                style="@style/LightSettingsRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ratingbar_light_settings_margin"
                android:layout_marginRight="@dimen/ratingbar_light_settings_margin"
                android:paddingTop="@dimen/ratingbar_light_top_bottom_padding"
                android:paddingBottom="@dimen/ratingbar_light_top_bottom_padding"
                android:max="@{brightnessModel.maxLight}"
                android:numStars="@{brightnessModel.numStar}"
                android:progress="@{brightnessModel.progress}"
                android:progressDrawable="@drawable/light_bar_step"
                android:stepSize="1.0" />

            <TextView
                android:layout_width="@dimen/brightness_button_width"
                android:layout_height="@dimen/brightness_button_height"
                android:background="@drawable/rectangle_stroke_round"
                android:gravity="center"
                android:onClick="@{()->brightnessModel.maxBrightness()}"
                android:text="@string/brightest_brightness"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</layout>
