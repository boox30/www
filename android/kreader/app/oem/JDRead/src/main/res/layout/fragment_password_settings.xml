<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="pswSettingModel"
            type="com.onyx.jdread.setting.model.PswSettingModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.onyx.jdread.setting.ui.PasswordSettingFragment">

        <include
            android:id="@+id/password_settings_title"
            layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/password_setting_content_margin_top"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="@{pswSettingModel.encrypted?View.GONE:View.VISIBLE}">

            <EditText
                android:id="@+id/password_encrypt_edit"
                style="@style/PasswordEditTextStyle"
                android:hint="@string/password_setting_hint"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="4"
                android:text="@={pswSettingModel.passwordEdit}" />

            <EditText
                android:id="@+id/phone_edit"
                style="@style/PasswordEditTextStyle"
                android:layout_marginTop="@dimen/phone_edit_margin_top"
                android:hint="@string/password_setting_phone_hint"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:text="@={pswSettingModel.phoneEdit}" />

            <TextView
                android:layout_width="@dimen/password_setting_edit_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/phone_edit_hint_margin_top"
                android:text="@string/phone_number_edit_hint"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />

            <TextView
                android:layout_width="@dimen/password_setting_confirm_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/phone_edit_margin_top"
                android:background="@drawable/rectangle_stroke_common_corners_selector"
                android:gravity="center"
                android:onClick="@{()->pswSettingModel.confirmPassword()}"
                android:padding="@dimen/password_confirm_padding"
                android:text="@string/confirm_password"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_two_heading_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/password_setting_content_margin_top"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="@{pswSettingModel.encrypted?View.VISIBLE:View.GONE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/level_one_heading_font"
                android:background="@null"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/input_password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unlock_input_margin_top"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/unlock_password_one"
                    android:layout_width="@dimen/unlock_input_number_width"
                    android:layout_height="@dimen/unlock_input_number_width"
                    android:background="@drawable/rectangle_stroke"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="@dimen/level_three_heading_font"/>

                <TextView
                    android:id="@+id/unlock_password_two"
                    android:layout_width="@dimen/unlock_input_number_width"
                    android:layout_height="@dimen/unlock_input_number_width"
                    android:background="@drawable/rectangle_stroke"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="@dimen/unlock_input_number_margin_left"
                    android:gravity="center"
                    android:textSize="@dimen/level_three_heading_font"/>

                <TextView
                    android:id="@+id/unlock_password_three"
                    android:layout_width="@dimen/unlock_input_number_width"
                    android:layout_height="@dimen/unlock_input_number_width"
                    android:background="@drawable/rectangle_stroke"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/unlock_input_number_margin_left"
                    android:textSize="@dimen/level_three_heading_font"/>

                <TextView
                    android:id="@+id/unlock_password_four"
                    android:layout_width="@dimen/unlock_input_number_width"
                    android:layout_height="@dimen/unlock_input_number_width"
                    android:background="@drawable/rectangle_stroke"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/unlock_input_number_margin_left"
                    android:textSize="@dimen/level_three_heading_font"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
