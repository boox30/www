<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">

            <stroke
                android:width="2dp"
                android:color="@android:color/black" />
            <size
                android:width="@dimen/radio_button_size"
                android:height="@dimen/radio_button_size" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/radio_button_inside_margin"
        android:left="@dimen/radio_button_inside_margin"
        android:right="@dimen/radio_button_inside_margin"
        android:top="@dimen/radio_button_inside_margin">
        <shape android:shape="oval">
            <solid
                android:width="1dp"
                android:color="@android:color/black" />
            <size
                android:width="@dimen/radio_button_inside_size"
                android:height="@dimen/radio_button_inside_size" />
        </shape>
    </item>
</layer-list>