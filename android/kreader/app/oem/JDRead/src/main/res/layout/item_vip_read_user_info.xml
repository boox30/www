<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.onyx.jdread.shop.model.VipUserInfoViewModel" />

        <import type="android.view.View" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vip_user_info_item_height"
        android:paddingTop="@dimen/vip_user_info_container_padding">

        <ImageView
            android:id="@+id/image_portraits"
            android:layout_width="@dimen/user_image_height"
            android:layout_height="@dimen/user_image_height"
            android:layout_centerVertical="true"
            bind:personalImage="@{viewModel.imageUrl}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/vip_user_info_name_margin_left"
            android:layout_toRightOf="@id/image_portraits"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/book_detail_margin"
                android:text="@{viewModel.name}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.vipStatus}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_15" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_stroke_round"
            android:onClick="@{()->viewModel.onVipButtonClick()}"
            android:paddingBottom="@dimen/book_detail_margin"
            android:paddingLeft="@dimen/renew_vip_button_padding_left_and_right"
            android:paddingRight="@dimen/renew_vip_button_padding_left_and_right"
            android:paddingTop="@dimen/book_detail_margin"
            android:text="@{viewModel.buttonContent}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font" />

        <View
            style="@style/book_detail_dot_line_Style"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/vip_user_info_container_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clickable="true"
            android:gravity="center"
            android:visibility="@{viewModel.showLoginButton ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="@dimen/vip_user_info_item_login_immediately_width"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_stroke_round"
                android:gravity="center"
                android:onClick="@{()->viewModel.onLoginButtonClick()}"
                android:paddingBottom="@dimen/book_detail_margin"
                android:paddingTop="@dimen/book_detail_margin"
                android:text="@string/login_immediately"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

        </LinearLayout>

    </RelativeLayout>

</layout>