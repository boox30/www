<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.onyx.jdread.shop.model.VipUserInfoViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/vip_user_info_container_padding"
        android:paddingTop="@dimen/vip_user_info_container_padding">

        <ImageView
            android:id="@+id/image_portraits"
            android:layout_width="@dimen/user_image_height"
            android:layout_height="@dimen/user_image_height"
            android:layout_centerVertical="true"
            bind:personalImage="@{viewModel.imageUrl}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/book_detail_margin"
            android:layout_toRightOf="@id/image_portraits"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.name}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.vipStatus}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/level_three_heading_font" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_stroke"
            android:onClick="@{()->viewModel.onVipButtonClick()}"
            android:paddingBottom="@dimen/book_detail_margin"
            android:paddingLeft="@dimen/renew_vip_button_padding_left_and_right"
            android:paddingRight="@dimen/renew_vip_button_padding_left_and_right"
            android:paddingTop="@dimen/book_detail_margin"
            android:text="@string/renew_vip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/level_three_heading_font" />

    </RelativeLayout>

</layout>