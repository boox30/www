<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.onyx.android.sdk.utils.StringUtils" />

        <import type="android.view.View" />

        <variable
            name="dialogModel"
            type="com.onyx.jdread.library.view.LibraryDeleteDialog.DialogModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/library_delete_dialog_title_padding"
            android:textSize="@dimen/level_two_heading_font"
            android:text="@{dialogModel.title}"
            android:visibility="@{StringUtils.isNullOrEmpty(dialogModel.title)?View.GONE:View.VISIBLE}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/library_delete_dialog_title_padding"
            android:gravity="center"
            android:textSize="@dimen/level_two_heading_font"
            android:text="@{dialogModel.message}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/library_delete_dialog_button_padding"
                android:onClick="@{()->dialogModel.onPositiveClick()}"
                android:textSize="@dimen/level_two_heading_font"
                android:background="@drawable/selected_background"
                android:text="@{dialogModel.positiveText}" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/library_delete_dialog_button_padding"
                android:onClick="@{()->dialogModel.onNegativeClick()}"
                android:textSize="@dimen/level_two_heading_font"
                android:background="@drawable/selected_background"
                android:text="@{dialogModel.negativeText}" />
        </LinearLayout>
    </LinearLayout>
</layout>