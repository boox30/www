<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_margin="@dimen/title_bar_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_back"
                android:drawablePadding="@dimen/title_bar_title_drawable_padding"
                android:gravity="center_vertical"
                android:onClick="@{listener.onClick}"
                android:text="@{title}"
                android:textSize="@dimen/level_two_heading_font" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/title_bar_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/title_bar_record_margin_right"
                android:drawableLeft="@drawable/icon_homework_record"
                android:gravity="center_vertical"
                android:text="@string/file_homework_record"
                android:textSize="@dimen/level_two_heading_font" />

            <Button
                android:id="@+id/title_bar_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_button_selector"
                android:gravity="center"
                android:text="@string/file_homework_commit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/level_one_heading_font" />

            <ImageView
                android:id="@+id/title_bar_image_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{listener::onClick}"
                android:src="@drawable/ic_eraser" />

            <ImageView
                android:id="@+id/title_bar_image_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{listener::onClick}"
                android:src="@drawable/ic_shape" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/black" />
    </LinearLayout>
</layout>
