<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/subjective_item_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/level_three_heading_font"/>

    <ImageView
        android:id="@+id/subjective_item_answer"
        android:layout_width="@dimen/question_view_subjective_answer_width"
        android:layout_height="@dimen/question_view_subjective_answer_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@android:color/black" />
</LinearLayout>
