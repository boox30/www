<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/automatic_shutdown_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/device_setting_page_margin_left"
        android:layout_marginRight="@dimen/device_setting_page_margin_left"
        android:paddingBottom="@dimen/page_refresh_item_padding_top"
        android:paddingTop="@dimen/page_refresh_item_padding_top"
        android:text="@string/device_setting_automatic_shutdown_title"
        android:textSize="@dimen/level_one_heading_font"
        android:textStyle="bold" />

    <View
        android:id="@+id/automatic_shutdown_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/automatic_shutdown_title"
        android:layout_marginLeft="@dimen/device_setting_page_margin_left"
        android:layout_marginRight="@dimen/device_setting_page_margin_left"
        android:background="@android:color/black" />

    <com.onyx.android.sun.view.PageRecyclerView
        android:id="@+id/automatic_shutdown_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/automatic_shutdown_title_bottom"
        android:layout_marginLeft="@dimen/device_setting_page_margin_left"
        android:layout_marginRight="@dimen/device_setting_page_margin_left"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/automatic_shutdown_save"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/automatic_shutdown_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="@dimen/device_setting_padding_top"
        android:paddingTop="@dimen/device_setting_padding_top"
        android:text="@string/device_setting_page_refresh_save"
        android:textSize="@dimen/level_one_heading_font"
        android:textStyle="bold" />
</RelativeLayout>