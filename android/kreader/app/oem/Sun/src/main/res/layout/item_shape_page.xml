<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ItemShapePageBinding">

        <variable
            name="text"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_shape_page"
            android:layout_width="@dimen/scribble_button_width"
            android:layout_height="@dimen/scribble_button_width"
            android:background="@drawable/rectangle_stroke"
            android:drawablePadding="@dimen/scribble_button_drawable_padding"
            android:drawableTop="@drawable/icon_answer_area"
            android:gravity="center"
            android:padding="@dimen/scribble_button_padding"
            android:text="@{text}" />
    </LinearLayout>
</layout>