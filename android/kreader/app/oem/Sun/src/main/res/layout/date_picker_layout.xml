<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <DatePicker
            android:id="@+id/sp_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TimePicker
            android:id="@+id/sp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/sp_certain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/date_picker_confirm_margin_top"
        android:paddingBottom="@dimen/date_picker_confirm_padding_top"
        android:paddingTop="@dimen/date_picker_confirm_padding_top"
        android:gravity="center"
        android:text="@string/confirm"
        android:textSize="@dimen/level_one_heading_font"
        android:background="@android:color/darker_gray"/>
</LinearLayout>
