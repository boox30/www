<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/image_view_prev_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_dialog_reader_page_arrow_left_black"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/grid_view_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/image_view_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_dialog_reader_page_closed_black"/>

            <ImageView
                    android:id="@+id/image_view_next_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_dialog_reader_page_arrow_right_black"/>
        </RelativeLayout>

    </LinearLayout>

    <View
            style="@style/single_line_X_axis_View"
            android:layout_height="@dimen/dialog_reader_menu_top_divider_height"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/image_view_four_grids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dialog_reader_page_four_black"/>

        <ImageView
                android:id="@+id/image_view_nine_grids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dialog_reader_page_nine_black"/>

    </LinearLayout>

</LinearLayout>