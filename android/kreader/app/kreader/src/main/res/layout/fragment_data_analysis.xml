<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_book"
            android:id="@+id/read_analysis_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:textSize="22sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/reading_rank_text"
                android:textSize="@dimen/activity_statistics_small_text_size"
                android:text="@string/reading_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <com.onyx.android.sdk.ui.view.PageRecyclerView
        android:background="@drawable/square_bg_no_focused"
        android:id="@+id/page_statistics"
        android:focusable="false"
        android:layout_margin="@dimen/activity_statistics_spacing"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </com.onyx.android.sdk.ui.view.PageRecyclerView>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_time"
            android:id="@+id/read_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_statistics_big_text_size"
                android:text="@string/time_distribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/reading_time_text"
                android:textSize="@dimen/activity_statistics_small_text_size"
                android:text="@string/reading_time_every_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/reading_chart"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/distribution_layout_height">

        <ImageView
            android:background="@android:color/black"
            android:layout_alignParentBottom="true"
            android:id="@+id/self_time_distribution_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:id="@+id/self_time_distribution"
            android:layout_toRightOf="@id/self_time_distribution_icon"
            android:layout_alignParentBottom="true"
            android:text="@string/self_time_distribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/self_time_distribution"
            android:layout_alignParentBottom="true"
            android:id="@+id/other_time_distribution_icon"
            android:background="@android:color/darker_gray"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/other_time_distribution_icon"
            android:layout_alignParentBottom="true"
            android:text="@string/other_time_distribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>
