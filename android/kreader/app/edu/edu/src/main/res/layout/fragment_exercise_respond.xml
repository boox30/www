<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="10dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_count"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:padding="10dp"
            android:src="@drawable/ic_exercise_arrow_left"
            android:id="@+id/left_arrow"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/paper_index"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebtn_bg"/>

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/right_arrow"
            android:id="@+id/paper_index"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="25sp"/>

        <ImageButton
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_exercise_arrow_right"
            android:layout_alignParentRight="true"
            android:id="@+id/right_arrow"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebtn_bg"/>
    </RelativeLayout>

    <com.onyx.android.edu.view.CustomViewPager
        android:id="@+id/paper_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </com.onyx.android.edu.view.CustomViewPager>

</LinearLayout>
