<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:appCompat="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/question_type_text_size"
                android:textColor="@android:color/black"
                android:id="@+id/question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:ellipsize="end"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/question_content_text_size"
                android:textColor="@android:color/black"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <RadioGroup
            android:layout_below="@+id/content_layout"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout
            appCompat:alwaysLayoutImageView="true"
            android:layout_below="@+id/option"
            android:layout_above="@+id/tool_layout_line"
            android:visibility="gone"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxWidth="@dimen/right_answer_mx_width"
                android:layout_centerVertical="true"
                android:textSize="@dimen/homework_text_size"
                android:textColor="@android:color/black"
                android:id="@+id/right_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/right_answer"
                android:layout_centerVertical="true"
                android:id="@+id/right_wrong_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/right_wrong_icon"
                android:layout_centerVertical="true"
                android:textSize="@dimen/homework_text_size"
                android:textColor="@android:color/black"
                android:layout_marginLeft="4dp"
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/homework_text_margin"
                android:background="@drawable/round_bg"
                android:textColor="@android:color/black"
                android:id="@+id/analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>

        <View
            android:layout_above="@+id/tool_layout"
            android:visibility="gone"
            android:id="@+id/tool_layout_line"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:layout_above="@+id/scribble_line"
            android:visibility="gone"
            android:id="@+id/tool_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onyx_main_note_menu_height"/>

        <View
            android:layout_above="@+id/scribble"
            android:visibility="gone"
            android:id="@+id/scribble_line"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <FrameLayout
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:id="@+id/scribble"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scribble_view_height">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/scribble_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/sub_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    </RelativeLayout>
</layout>
