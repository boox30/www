<?xml version="1.0" encoding="utf-8"?>
<com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/scribble_view_width"
    android:layout_height="@dimen/objective_scribble_view_height"
    android:padding="10dp">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_content_text_size"/>

    <RadioGroup
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:orientation="vertical"
        android:padding="10dp"/>

</com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>