<?xml version="1.0" encoding="utf-8"?>
<com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appCompat="http://schemas.android.com/tools"
    appCompat:alwaysLayoutImageView="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center"
        android:background="@drawable/shadow_tab"
        android:id="@+id/background_view"
        android:src="@drawable/rectangle_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@drawable/tab_text_selector"
        android:textSize="25sp"/>

</com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>
