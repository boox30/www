<?xml version="1.0" encoding="utf-8"?>
<com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="2dp"
    app:alwaysLayoutImageView="true">

    <RelativeLayout
        android:id="@+id/cover_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/image_selector_bg">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="232dp"
            android:layout_height="360dp"
            android:scaleType="fitXY"
            android:src="@drawable/book_default_cover" />

        <ImageView
            android:id="@+id/image_get_widget"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/book_item_get_widget"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cover_panel"
        android:layout_alignRight="@+id/cover_panel"
        android:layout_below="@+id/cover_panel"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textSize="26sp" />

</com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>