<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="?attr/dialogPreferredPadding"
        android:paddingRight="?attr/dialogPreferredPadding">

        <ImageView
            android:id="@+id/alert_icon"
            style="@style/RtlOverlay.Widget.AppCompat.DialogTitle.Icon"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:scaleType="fitCenter"
            android:src="@drawable/info_icon" />

        <android.support.v7.widget.DialogTitle
            android:id="@+id/alert_title"
            style="@style/WindowTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="hello" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_function_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebtn_bg"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_dialog_prev" />

        <TextView
            android:id="@+id/page_size_indicator"
            style="@style/WindowTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="1/1"
            android:textColor="@android:color/primary_text_light" />

        <ImageView
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebtn_bg"
            android:focusable="true"
            android:src="@drawable/ic_dialog_next" />
    </LinearLayout>

</RelativeLayout>