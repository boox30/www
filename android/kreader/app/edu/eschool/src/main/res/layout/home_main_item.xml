<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_item_background">

    <RelativeLayout
        android:id="@+id/home_teaching_material_category_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/home_teaching_material_layout_margin"
        android:layout_marginEnd="@dimen/home_teaching_material_layout_margin"
        android:layout_marginLeft="@dimen/home_teaching_material_layout_margin"
        android:layout_marginRight="@dimen/home_teaching_material_layout_margin"
        android:layout_marginStart="@dimen/home_teaching_material_layout_margin"
        android:layout_marginTop="@dimen/home_teaching_material_layout_margin"
        android:background="@color/home_item_view_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_category_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/home_normal_item_category_margin"
            app:srcCompat="@drawable/home_eschool" />

        <TextView
            android:id="@+id/textView_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_category_image"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/home_normal_item_category_margin"
            android:layout_marginRight="@dimen/home_normal_item_category_margin"
            android:text="@string/app_name"
            android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light.Medium"
            android:textSize="@dimen/home_main_item_category_title_text_size"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>