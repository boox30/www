<?xml version="1.0" encoding="utf-8"?>
<RadioButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radio_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/custom_radio_button_margin_left_right"
    android:layout_marginRight="@dimen/custom_radio_button_margin_left_right"
    android:background="@drawable/radiobutton_selector"
    android:button="@null"
    android:gravity="center"
    android:minHeight="@dimen/custom_radio_button_min_height"
    android:minWidth="@dimen/custom_radio_button_min_width"
    android:paddingLeft="@dimen/custom_radio_button_padding_left_right"
    android:paddingRight="@dimen/custom_radio_button_padding_left_right"
    android:text="@string/text_style"
    android:textColor="@drawable/radio_button_text_color"
    android:textSize="@dimen/custom_radio_button_text_size"
    android:textStyle="bold" />