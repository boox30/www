<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="2dp">

    <ImageView
        android:id="@+id/select_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/blank"
        android:minHeight="@dimen/custom_radio_image_min_height" />

    <RadioGroup
        android:id="@+id/select_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:divider="@drawable/custom_radio_group_divider"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <include
            android:id="@+id/radio_button1"
            layout="@layout/custom_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/custom_radio_button_margin_left_right"
            android:layout_marginRight="@dimen/custom_radio_button_margin_left_right"
            android:checked="true" />

        <include
            android:id="@+id/radio_button2"
            layout="@layout/custom_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/custom_radio_button_margin_left_right"
            android:layout_marginRight="@dimen/custom_radio_button_margin_left_right" />

        <include
            android:id="@+id/radio_button3"
            layout="@layout/custom_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/custom_radio_button_margin_left_right"
            android:layout_marginRight="@dimen/custom_radio_button_margin_left_right" />

    </RadioGroup>

</merge>