<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onyx.android.eschool"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name=".SchoolApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/OnyxAppCompat">

        <meta-data
            android:name="channel"
            android:value="${channel_value}" />
        <meta-data
            android:name="type"
            android:value="${type_value}" />
        <meta-data
            android:name="timestamp"
            android:value="${timestamp_value}" />

        <activity
            android:name=".activity.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.TeachingMaterialActivity" />

        <activity
            android:name=".activity.TeachingAuxiliaryActivity" />

        <activity
            android:name=".activity.StudyPreviewActivity" />

        <activity
            android:name=".activity.AvatarSelectActivity" />

        <activity
            android:name=".activity.StudentInfoSettingActivity"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".activity.ApplicationsActivity" />

        <activity
            android:name=".activity.LibraryActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".activity.MainActivity" />

        <receiver android:name=".receiver.ContentBroadcastReceiver">
            <intent-filter >
                <action android:name="com.onyx.content.database.ACTION_BUILD_LIBRARY" />
                <action android:name="com.onyx.content.database.ACTION_ADD_TO_LIBRARY" />
            </intent-filter>
        </receiver>

    </application>

</manifest>