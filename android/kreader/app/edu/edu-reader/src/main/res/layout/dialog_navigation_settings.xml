<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_tittleArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/dialog_title_text_size"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:id="@+id/textView_dialog_Tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="@string/navigation_mode"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <View
        android:id="@+id/top_divider_line"
        style="@style/single_line_X_axis_View"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/radio_group_divider_line"
            style="@style/single_line_X_axis_View"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="@dimen/dialog_navigation_setting_left_item_width"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/title"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_reader_browse_cut" />

                <TextView
                    android:text="@string/crop"
                    android:textSize="@dimen/dialog_navigation_setting_item_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <View
                android:layout_marginTop="@dimen/dialog_navigation_setting_item_margin"
                android:layout_marginBottom="@dimen/dialog_navigation_setting_item_margin"
                android:layout_marginRight="@dimen/dialog_navigation_setting_item_margin"
                style="@style/single_line_Y_axis_View"
                android:layout_width="1dp"
                android:background="@android:color/black" />

            <com.onyx.android.sdk.ui.view.ContentView
                android:id="@+id/crop_contentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_navigation_settings_mode_icon_contentView_height"/>
        </LinearLayout>

        <View
            style="@style/single_line_X_axis_View"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dialog_navigation_setting_left_item_width"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/image_view_column"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/title"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_navigation_settings_subscreen_2_2" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_below="@+id/image_view_column"
                    android:text="@string/column"
                    android:textSize="@dimen/dialog_navigation_setting_item_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/dialog_navigation_setting_item_margin"
                android:layout_marginBottom="@dimen/dialog_navigation_setting_item_margin"
                android:layout_marginRight="@dimen/dialog_navigation_setting_item_margin"
                style="@style/single_line_Y_axis_View"
                android:layout_width="1dp"
                android:background="@android:color/black" />

            <com.onyx.android.sdk.ui.view.ContentView
                android:id="@+id/subscreen_contentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_navigation_settings_mode_icon_contentView_height"/>
        </LinearLayout>

        <View
            style="@style/single_line_X_axis_View"
            android:layout_height="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dialog_navigation_setting_left_item_width"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/image_view_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/title"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dialog_navigation_settings_navigation_mode" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_below="@+id/image_view_direction"
                    android:text="@string/direction"
                    android:textSize="@dimen/dialog_navigation_setting_item_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/dialog_navigation_setting_item_margin"
                android:layout_marginBottom="@dimen/dialog_navigation_setting_item_margin"
                android:layout_marginRight="@dimen/dialog_navigation_setting_item_margin"
                style="@style/single_line_Y_axis_View"
                android:layout_width="1dp"
                android:background="@android:color/black" />

            <com.onyx.android.sdk.ui.view.ContentView
                android:id="@+id/navigation_contentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_navigation_settings_mode_icon_contentView_height"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/single_line_X_axis_View"
        android:layout_height="2dp" />

        <CheckBox
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/dialog_navigation_setting_item_text_size"
            android:id="@+id/auto_crop_for_each_block"
            android:padding="20dp"
            android:text="@string/auto_crop_for_each_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
        android:id="@+id/bottom_divider_line"
        style="@style/single_line_X_axis_View"
        android:layout_height="2dp" />

    <LinearLayout
        android:id="@+id/control_area"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.onyx.android.sdk.ui.view.OnyxButton
            android:focusable="true"
            android:textSize="@dimen/dialog_common_text_size"
            android:background="@drawable/radio_button_bg"
            android:id="@+id/buttonCancel"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_minHeight"
            android:text="@string/cancel"
            android:layout_weight="1" />

        <com.onyx.android.sdk.ui.view.OnyxButton
            android:focusable="true"
            android:textSize="@dimen/dialog_common_text_size"
            android:background="@drawable/radio_button_bg"
            android:id="@+id/buttonConfirm"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_minHeight"
            android:layout_weight="1"
            android:text="@string/ok" />
    </LinearLayout>
</LinearLayout>