<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:appCompat="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        style="@style/single_line_X_axis_View"
        android:layout_height="1dp"/>

    <View
        android:layout_weight="1"
        android:id="@+id/dismiss_zone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"/>

    <View
        style="@style/single_line_X_axis_View"
        android:layout_height="1dp"/>

    <com.onyx.android.sdk.ui.compat.AppCompatLinearLayout
        android:gravity="center_vertical"
        android:background="@android:color/white"
        appCompat:alwaysLayoutImageView="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:id="@+id/menu_view"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </LinearLayout>


        <LinearLayout
            android:layout_marginRight="@dimen/menu_item_view_margin"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/prev"
                android:src="@drawable/prevbtn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="@string/prev_page"
                android:layout_marginTop="@dimen/menu_item_view_margin"
                android:textSize="@dimen/scribble_page_position_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:layout_marginRight="@dimen/menu_item_view_margin"
            android:paddingBottom="@dimen/menu_text_padding_bottom"
            android:minWidth="80dp"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/position_text"
            android:text="1791"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginRight="@dimen/menu_item_view_margin"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/next"
                android:src="@drawable/nextbtn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/next_page"
                android:layout_marginTop="@dimen/menu_item_view_margin"
                android:textSize="@dimen/scribble_page_position_size"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.onyx.android.sdk.ui.compat.AppCompatLinearLayout>


</LinearLayout>