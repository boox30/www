<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:appCompat="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.onyx.android.sdk.ui.data.MenuId"/>
        <import type="com.onyx.edu.note.ui.MenuItem"/>
        <import type="java.util.HashMap"/>

        <variable
            name="item"
            type="HashMap&lt;Integer, MenuItem>"/>

    </data>

    <com.onyx.android.sdk.ui.compat.AppCompatLinearLayout
        appCompat:alwaysLayoutImageView="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            bind:item="@{item[MenuId.PEN_STYLE]}"
            layout="@layout/main_menu_item"/>

        <include
            bind:item="@{item[MenuId.BG]}"
            layout="@layout/main_menu_item"/>

        <include
            bind:item="@{item[MenuId.ERASER]}"
            layout="@layout/main_menu_item"/>

        <include
            bind:item="@{item[MenuId.PEN_WIDTH]}"
            layout="@layout/main_menu_item"/>


        <include
            bind:item="@{item[MenuId.SHAPE_SELECT]}"
            layout="@layout/main_menu_item"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <include
            bind:item="@{item[MenuId.DELETE_PAGE]}"
            layout="@layout/main_menu_item"/>

        <include
            bind:item="@{item[MenuId.ADD_PAGE]}"
            layout="@layout/main_menu_item"/>

        <include
            bind:item="@{item[MenuId.PREV_PAGE]}"
            layout="@layout/main_menu_item"/>


        <Button
            android:id="@+id/button_page_progress"
            android:layout_width="@dimen/wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebtn_bg"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:visibility="@{item[MenuId.PAGE].visibility}"
            android:text="@{item[MenuId.PAGE].text}" />

        <include
            bind:item="@{item[MenuId.NEXT_PAGE]}"
            layout="@layout/main_menu_item"/>

    </com.onyx.android.sdk.ui.compat.AppCompatLinearLayout>

</layout>
