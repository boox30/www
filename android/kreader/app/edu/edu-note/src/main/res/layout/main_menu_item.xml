<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="item"
            type="com.onyx.android.sdk.ui.data.MenuItem" />
    </data>

    <ImageView
        android:background="@drawable/imagebtn_bg"
        android:paddingLeft="@dimen/menu_padding_left_right"
        android:paddingRight="@dimen/menu_padding_left_right"
        android:paddingTop="@dimen/menu_padding_top_bottom"
        android:paddingBottom="@dimen/menu_padding_top_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{item == null ? View.GONE : item.visibility}"
        android:onClick="@{(v) ->item.menuClicked(v)}"
        android:src="@{item.menuIcon}"/>
</layout>
