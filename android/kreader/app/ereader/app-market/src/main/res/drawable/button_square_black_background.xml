<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="@android:color/white" android:startColor="@android:color/white" />
            <stroke android:width="2dp" android:color="@android:color/black" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:endColor="@android:color/white" android:startColor="@android:color/white" />
            <stroke android:width="2dp" android:color="@android:color/black" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="@android:color/black" android:startColor="@android:color/black" />
        </shape>
    </item>
</selector>