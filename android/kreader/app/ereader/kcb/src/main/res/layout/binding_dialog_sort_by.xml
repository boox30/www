<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="sortByModel"
            type="com.onyx.kcb.model.SortByDialogModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{()->sortByModel.checked()}">

        <TextView
            android:id="@+id/dialog_sortBy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.onyx.android.sdk.ui.view.PageRecyclerView
            android:id="@+id/content_pageView"
            items="@{sortByModel.modelList}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>