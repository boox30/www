<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.onyx.kcb.event.OperationEvent"/>

        <import type="com.onyx.kcb.model.OperationItem"/>

        <import type="com.onyx.kcb.model.StorageViewModel"/>

        <import type="android.util.SparseArray"/>

        <variable
            name="viewModel"
            type="com.onyx.kcb.model.StorageViewModel"/>

    </data>

    <LinearLayout
        android:id="@+id/operation_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/button_minHeight"
        android:orientation="horizontal"
        android:visibility="@{viewModel.showOperationFunc?View.VISIBLE:View.GONE}">

        <include
            layout="@layout/button_operation_item"
            bind:item="@{viewModel.operationItemArray[OperationEvent.OPERATION_PASTE]}"/>

        <include
            layout="@layout/button_operation_item"
            bind:item="@{viewModel.operationItemArray[OperationEvent.OPERATION_COPY]}"/>

        <include
            layout="@layout/button_operation_item"
            bind:item="@{viewModel.operationItemArray[OperationEvent.OPERATION_CUT]}"/>

        <include
            layout="@layout/button_operation_item"
            bind:item="@{viewModel.operationItemArray[OperationEvent.OPERATION_DELETE]}"/>

        <include
            layout="@layout/button_operation_item"
            bind:item="@{viewModel.operationItemArray[OperationEvent.OPERATION_CANCEL]}"/>

    </LinearLayout>

</layout>