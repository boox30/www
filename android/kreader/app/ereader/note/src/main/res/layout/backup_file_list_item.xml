<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/backup_restore_list_item_padding">

        <TextView
            android:paddingLeft="@dimen/backup_restore_list_item_name_text_padding_left"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/name"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/settings_title_text_size"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/darker_gray"
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/backup_restore_list_item_padding"
                android:textSize="@dimen/backup_restore_list_item_text_small_size"/>

            <TextView
                android:textColor="@android:color/darker_gray"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/backup_restore_list_item_padding"
                android:textSize="@dimen/backup_restore_list_item_text_small_size"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.onyx.android.sdk.ui.view.CustomIconView
                android:background="@drawable/imagebtn_bg"
                android:id="@+id/restore"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/local_backup_restore"
                app:iconDrawingSize="@dimen/global_activities_function_icon_size"
                app:enableZoomDrawable="@bool/iconViewEnableZoomDrawable"/>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/backup_restore_list_item_padding"
        android:layout_marginRight="@dimen/backup_restore_list_item_padding"
        android:background="@android:color/black"/>
</LinearLayout>