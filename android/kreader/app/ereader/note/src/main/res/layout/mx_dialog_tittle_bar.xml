<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/global_dialog_tittle_bar"
    android:layout_alignParentTop="true"
    android:minHeight="@dimen/button_minHeight">

    <TextView
        android:id="@+id/textView_title"
        style="@style/global_dialog_tittle_bar_textView"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_minHeight"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:layout_toLeftOf="@+id/button_function_panel" />

    <LinearLayout
        android:id="@+id/button_function_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebtn_bg"
            android:clickable="true"
            android:src="@drawable/ic_dialog_prev"
            android:visibility="gone"
            android:focusable="true" />

        <TextView
            android:id="@+id/page_size_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@android:color/primary_text_light" />

        <ImageView
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagebtn_bg"
            android:src="@drawable/ic_dialog_next"
            android:visibility="gone"
            android:focusable="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:background="@drawable/imagebtn_bg"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="gone"
        android:focusable="true" />
</RelativeLayout>