<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="com.onyx.android.sdk.ui.data.MenuId"/>
        <import type="com.onyx.android.sdk.ui.data.MenuItem"/>
        <import type="android.util.SparseArray"/>
        <import type="com.onyx.knote.R"/>

        <variable
            name="item"
            type="SparseArray&lt;MenuItem>"/>
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:background="@android:color/white"
        android:paddingTop="@dimen/sub_menu_padding"
        android:paddingBottom="@dimen/sub_menu_padding"
        app:flexWrap="wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <include
            bind:item="@{item[MenuId.ERASE_PARTIALLY].setMenuIcon(R.drawable.ic_eraser_part)}"
            layout="@layout/sub_menu_item"/>

        <include
            bind:item="@{item[MenuId.ERASE_TOTALLY].setMenuIcon(R.drawable.ic_eraser_all)}"
            layout="@layout/sub_menu_item"/>

    </com.google.android.flexbox.FlexboxLayout>

</layout>
