<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onyx.phone.reader">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.onyx.phone.reader.ReaderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppNoActionBarTheme">

        <meta-data
            android:name="channel"
            android:value="${channel_value}" />
        <meta-data
            android:name="type"
            android:value="${type_value}" />
        <meta-data
            android:name="timestamp"
            android:value="${timestamp_value}" />

        <activity android:name="com.onyx.phone.reader.ui.activity.MainActivity">

        </activity>

        <activity android:name="com.onyx.phone.reader.reader.ui.ReaderActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:host="*" android:scheme="file" />
                <data android:host="*" android:scheme="content" />
                <data android:mimeType="application/pdf" />
                <data android:mimeType="application/x-zip" />
                <data android:mimeType="application/x-cbz" />
                <data android:mimeType="application/x-cbr" />
                <data android:mimeType="image/vnd.djvu"/>
                <data android:mimeType="image/x-djvu"/>
                <data android:mimeType="image/jpeg"/>
                <data android:mimeType="image/png"/>
                <data android:mimeType="image/bmp"/>
                <data android:mimeType="image/x-ms-bmp"/>
                <data android:mimeType="image/x-windows-bmp"/>
                <data android:mimeType="application/djvu" />
                <data android:mimeType="text/xml" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="text/html" />
                <data android:mimeType="text/fb2+xml" />
                <data android:mimeType="text/rtf" />
                <data android:mimeType="text/richtext" />
                <data android:mimeType="text/*" />
                <data android:mimeType="application/text" />
                <data android:mimeType="application/txt" />
                <data android:mimeType="application/txt+zip" />
                <data android:mimeType="application/txt.zip" />
                <data android:mimeType="text/html" />
                <data android:mimeType="application/html" />
                <data android:mimeType="application/html+zip" />
                <data android:mimeType="application/html.zip" />
                <data android:mimeType="text/fb2+xml" />
                <data android:mimeType="application/x-fb2" />
                <data android:mimeType="application/fb2" />
                <data android:mimeType="application/fb2.zip" />
                <data android:mimeType="application/fb2+zip" />
                <data android:mimeType="application/zip" />
                <data android:mimeType="application/x-fictionbook" />
                <data android:mimeType="application/x-fictionbook+xml" />
                <data android:mimeType="application/x-fictionbook+zip" />
                <data android:mimeType="application/epub+zip" />
                <data android:mimeType="application/epub" />
                <data android:mimeType="application/JEB" />
                <data android:mimeType="application/x-mobipocket-ebook" />
                <data android:mimeType="application/azw3" />
                <data android:mimeType="application/mobi" />
                <data android:mimeType="application/prc" />
                <data android:mimeType="application/octet-stream" />
                <data android:mimeType="application/odt" />
                <data android:mimeType="application/rtf" />
                <data android:mimeType="application/x-rtf" />
                <data android:mimeType="text/rtf" />
                <data android:mimeType="text/richtext" />
                <data android:mimeType="application/rtf+zip" />
                <data android:mimeType="application/rtf.zip" />
                <data android:mimeType="application/msword" />
                <data android:mimeType="application/doc" />
                <data android:mimeType="application/docx" />
                <data android:mimeType="application/vnd.msword" />
                <data android:mimeType="application/vnd.ms-word" />
                <data android:mimeType="application/winword" />
                <data android:mimeType="application/word" />
                <data android:mimeType="application/x-msw6" />
                <data android:mimeType="application/x-msword" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.wordprocessingml.document" />
                <data android:mimeType="application/doc+zip" />
                <data android:mimeType="application/doc.zip" />
            </intent-filter>
        </activity>

        <activity android:name="com.onyx.phone.reader.ui.activity.StartActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.onyx.phone.reader.ui.activity.ShareFileActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.onyx.phone.reader.wxapi.WXEntryActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

    </application>

</manifest>
