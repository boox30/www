<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appCompat="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/action_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_tab"
        android:src="@drawable/tab_image_selected" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxWidth="@dimen/tab_layout_tab_text_max_width"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingBottom="@dimen/tab_item_text_padding_bottom"
        android:paddingRight="@dimen/tab_item_text_padding_right"
        android:text="hello"
        android:textSize="@dimen/tab_item_text_size" />

</RelativeLayout>