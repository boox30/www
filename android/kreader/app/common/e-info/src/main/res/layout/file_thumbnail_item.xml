<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appCompat="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.widget.ImageView.ScaleType" />

        <import type="android.widget.CheckBox" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.onyx.einfo.model.StorageItemViewModel" />
    </data>

    <com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/image_button_bg"
        android:onClick="@{() ->viewModel.itemClicked()}"
        android:onLongClick="@{()->viewModel.itemLongClicked()}"
        appCompat:alwaysLayoutImageView="true">

        <ImageView
            android:id="@+id/imageview_bg"
            thumbnail="@{viewModel.thumbnail}"
            android:layout_width="180dp"
            android:layout_height="265dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:scaleType="@{viewModel.isDocument ? ScaleType.FIT_XY : ScaleType.FIT_CENTER}" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_bg"
            android:ellipsize="middle"
            android:gravity="top|center_horizontal"
            android:singleLine="true"
            android:text="@{viewModel.documentName}"
            android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light.Large"
            android:textColor="@android:color/black"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/checkbox_multi_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="@{viewModel.isSelected}"
            android:clickable="false"
            android:focusable="false"
            android:visibility="@{viewModel.enableSelection?View.VISIBLE:View.GONE}" />

    </com.onyx.android.sdk.ui.compat.AppCompatRelativeLayout>

</layout>
