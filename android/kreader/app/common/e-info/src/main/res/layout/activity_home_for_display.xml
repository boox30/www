<?xml version="1.0" encoding="utf-8"?>
<com.onyx.android.sdk.ui.compat.AppCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:appCompat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/home_layout_padding"
    appCompat:alwaysLayoutImageView="true">

    <include
        android:id="@+id/home_main_item"
        layout="@layout/home_main_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/home_pic_display_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="9" />

    <include
        android:id="@+id/home_pic_display_item"
        layout="@layout/home_normal_land_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/home_item_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/home_dictionary_item"
        app:layout_constraintTop_toBottomOf="@+id/home_main_item"
        app:layout_constraintVertical_weight="4" />

    <include
        android:id="@+id/home_dictionary_item"
        layout="@layout/home_normal_land_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/home_item_divider"
        android:layout_marginLeft="@dimen/home_item_divider"
        android:layout_marginStart="@dimen/home_item_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_pic_display_item"
        app:layout_constraintRight_toLeftOf="@+id/home_setting_item"
        app:layout_constraintTop_toBottomOf="@+id/home_main_item"
        app:layout_constraintVertical_weight="4" />

    <include
        android:id="@+id/home_setting_item"
        layout="@layout/home_normal_land_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/home_item_divider"
        android:layout_marginLeft="@dimen/home_item_divider"
        android:layout_marginStart="@dimen/home_item_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_dictionary_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_main_item"
        app:layout_constraintVertical_weight="4" />

</com.onyx.android.sdk.ui.compat.AppCompatConstraintLayout>