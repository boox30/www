<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_avatar_margin_top"
        android:src="@drawable/ic_avatar" />

    <EditText
        android:id="@+id/edit_username"
        style="@style/login_edit_style"
        android:layout_below="@+id/image_avatar"
        android:layout_marginLeft="@dimen/activity_login_user_name_margin"
        android:layout_marginRight="@dimen/activity_login_user_name_margin"
        android:layout_marginTop="@dimen/activity_login_user_name_margin"
        android:drawableLeft="@drawable/ic_user"
        android:hint="@string/account_hint"
        android:imeOptions="actionNext" />

    <EditText
        android:id="@+id/edit_password"
        style="@style/login_edit_style"
        android:layout_alignLeft="@+id/edit_username"
        android:layout_alignRight="@+id/edit_username"
        android:layout_below="@+id/edit_username"
        android:layout_marginTop="@dimen/activity_login_user_password_margin_top"
        android:drawableLeft="@drawable/ic_pw"
        android:hint="@string/password_hint"
        android:imeOptions="actionDone"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tv_password_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_below="@+id/edit_password"
        android:layout_marginTop="@dimen/activity_login_password_forget_margin_top"
        android:text="@string/password_forget"
        android:textColor="#333333"
        android:textSize="@dimen/activity_login_password_forget_text_size"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_button_height"
        android:layout_alignLeft="@+id/edit_username"
        android:layout_alignRight="@+id/edit_password"
        android:layout_below="@+id/edit_password"
        android:layout_marginTop="@dimen/activity_login_button_margin_top"
        android:background="@drawable/button_background"
        android:text="@string/login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/activity_login_button_text_size" />

</RelativeLayout>