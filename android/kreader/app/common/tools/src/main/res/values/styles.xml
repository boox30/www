<resources>

    <style name="AppTheme" parent="@style/CustomLibraryTheme">

    </style>

    <style name="ToolBarStyle.Pop" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="CustomLibraryTheme.ToolBarStyle">

    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3px</item>
        <item name="android:background">#cecece</item>
    </style>

    <style name="user_info_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="user_info_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="parent_group_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">164dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="login_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/activity_login_edit_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawablePadding">@dimen/activity_login_edit_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/activity_login_edit_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:textSize">@dimen/activity_login_edit_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
