<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagebtn_bg"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/cover_panel"
        android:layout_width="@dimen/teaching_auxiliary_product_cover_panel_width"
        android:layout_height="@dimen/teaching_auxiliary_product_cover_panel_height"
        android:background="@drawable/background_shadow">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/cloud_cover" />

        <ImageView
            android:id="@+id/image_get_widget"
            android:layout_width="@dimen/teaching_auxiliary_product_cover_panel_get_widget_size"
            android:layout_height="@dimen/teaching_auxiliary_product_cover_panel_get_widget_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/book_item_get_widget_right"
            android:visibility="gone" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_line"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/teaching_auxiliary_product_progress_height"
        android:layout_alignLeft="@+id/cover_panel"
        android:layout_alignRight="@+id/cover_panel"
        android:layout_below="@+id/cover_panel"
        android:layout_marginTop="@dimen/teaching_auxiliary_product_progress_margin_top"
        android:max="100"
        android:paddingLeft="@dimen/teaching_auxiliary_product_progress_padding_left_right"
        android:paddingRight="@dimen/teaching_auxiliary_product_progress_padding_left_right"
        android:progressDrawable="@drawable/progressbar_square_style"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cover_panel"
        android:layout_alignRight="@+id/cover_panel"
        android:layout_below="@+id/cover_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/teaching_auxiliary_product_text_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:textSize="@dimen/teaching_auxiliary_product_text_size" />

</RelativeLayout>