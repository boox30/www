<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/showcase_layout"
        layout="@layout/showcase_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_teaching_material_showcase_layout_height"
        android:layout_margin="@dimen/activity_teaching_material_showcase_layout_margin" />

    <com.onyx.android.sdk.ui.view.PageRecyclerView
        android:id="@+id/syllabus_page_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_teaching_material_syllabus_page_layout_height"
        android:layout_alignLeft="@+id/showcase_layout"
        android:layout_alignRight="@+id/showcase_layout"
        android:layout_alignTop="@+id/showcase_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_black_rect_gray_solid"
        android:paddingLeft="@dimen/activity_teaching_material_syllabus_page_layout_padding_left_right"
        android:paddingRight="@dimen/activity_teaching_material_syllabus_page_layout_padding_left_right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_material_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/volume_layout"
        android:layout_alignLeft="@+id/showcase_layout"
        android:text="@string/home_item_teaching_materials_text"
        android:textSize="@dimen/activity_teaching_material_text_label_size" />

    <RelativeLayout
        android:id="@+id/volume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showcase_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/showcase_layout"
        android:layout_margin="@dimen/activity_teaching_material_volume_layout_margin"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/volume_one_layout"
            android:layout_width="@dimen/activity_teaching_material_volume_item_width"
            android:layout_height="@dimen/activity_teaching_material_volume_item_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/imagebtn_bg">

            <ImageView
                android:id="@+id/volume_one_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_teaching_material_volume_item_cover_margin"
                android:background="@drawable/background_shadow"
                android:scaleType="fitXY"
                android:src="@drawable/sample_cover2" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/volume_two_layout"
            android:layout_width="@dimen/activity_teaching_material_volume_item_width"
            android:layout_height="@dimen/activity_teaching_material_volume_item_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/imagebtn_bg">

            <ImageView
                android:id="@+id/volume_two_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_teaching_material_volume_item_cover_margin"
                android:background="@drawable/background_shadow"
                android:scaleType="fitXY"
                android:src="@drawable/sample_cover3" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>