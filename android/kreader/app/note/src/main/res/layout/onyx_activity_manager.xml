<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onyx.android.note.activity.onyx.ManagerActivity">

    <android.support.v7.widget.Toolbar style="@style/OnyxToolBarStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:id="@id/back_function_layout"
                style="@style/global_activities_back_function_layout"
                android:layout_marginLeft="23dp">

                <ImageView
                    android:id="@+id/imageView_main_title"
                    style="@style/global_activities_back_btn_category_image"
                    android:src="@drawable/ic_business_write_pen_gray_34dp" />

                <TextView
                    android:id="@+id/textView_main_title"
                    style="@style/global_activities_back_btn_category_tittle"
                    android:layout_toRightOf="@+id/imageView_main_title"
                    android:ellipsize="middle"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="@string/app_name" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/control_panel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/add_folder_btn"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/delete_btn"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/imagebtn_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_delete_black_36dp"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/move_btn"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/imagebtn_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_move_to_inbox_black_36dp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/add_folder_btn"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/multi_select_mode"
                android:background="@drawable/imagebtn_bg"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_create_new_folder_black_36dp" />

            <com.onyx.android.note.view.CheckableImageView
                android:id="@+id/multi_select_mode"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/imagebtn_bg"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/onyx_multi_select_btn" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <com.onyx.android.sdk.ui.view.ContentView
        android:id="@+id/note_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/page_indicator_area"
        android:layout_below="@id/tool_bar" />

    <RelativeLayout
        android:id="@+id/page_indicator_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_previous_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imagebtn_bg"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:src="@drawable/ic_note_prev_page_gray_32dp" />

            <Button
                android:id="@+id/button_page_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imagebtn_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/paged_init_text"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/button_next_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imagebtn_bg"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:src="@drawable/ic_note_next_page_gray_32dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
