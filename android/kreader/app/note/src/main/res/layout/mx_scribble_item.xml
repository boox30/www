<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_bg"
        android:ellipsize="middle"
        android:gravity="top|center_horizontal"
        android:lines="2"
        android:maxLines="2"
        android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light.Large"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textview_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:ellipsize="middle"
        android:gravity="top|center_horizontal"
        android:lines="1"
        android:textAppearance="@style/OnyxAppCompat.TextAppearance.Light.Medium"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/imageview_bg"
        android:layout_width="@dimen/mx_scribble_bg_item_width"
        android:layout_height="@dimen/mx_scribble_bg_item_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/unknown_application" />

    <CheckBox
        android:id="@+id/checkbox_multi_select"
        style="@style/MX.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible" />

</RelativeLayout>